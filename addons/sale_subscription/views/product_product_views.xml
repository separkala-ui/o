<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_product_view_search_catalog" model="ir.ui.view">
        <field name="name">product.view.search.catalog.inherit.sale.subscription</field>
        <field name="inherit_id" ref="product.product_view_search_catalog"/>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <filter name="goods" position="after">
                <filter string="Subscriptions" name="filter_recurring" domain="[('recurring_invoice','=', True)]"/>
            </filter>
        </field>
    </record>

    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">sale.subscription.product.product.normal.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='subscription_pricing']/field[@name='subscription_rule_ids_fixed']" position="attributes">
                <attribute name="context">
                    {
                        'default_product_id': id,
                        'form_view_ref': 'sale_subscription.product_pricelist_item_sale_subscription_view',
                    }
                </attribute>
            </xpath>
        </field>
    </record>
</odoo>
