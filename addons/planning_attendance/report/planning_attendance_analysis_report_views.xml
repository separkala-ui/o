<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="planning_attendance_analysis_report_view_pivot" model="ir.ui.view">
         <field name="name">planning.attendance.analysis.report.pivot</field>
         <field name="model">planning.attendance.analysis.report</field>
         <field name="arch" type="xml">
             <pivot string="Planning / Attendance Analysis" sample="1" disable_linking="1">
                <field name="entry_date" interval="month" type="row"/>
                <field name="planned_hours" type="measure" widget="float_time"/>
                <field name="effective_hours" type="measure" widget="float_time"/>
                <field name="time_difference" type="measure" widget="float_time"/>
                <field name="planned_costs" widget="monetary"/>
                <field name="effective_costs" widget="monetary"/>
                <field name="cost_difference" widget="monetary"/>
             </pivot>
         </field>
    </record>

    <record id="planning_attendance_analysis_report_view_graph" model="ir.ui.view">
        <field name="name">planning.attendance.analysis.report.graph</field>
        <field name="model">planning.attendance.analysis.report</field>
        <field name="arch" type="xml">
            <graph string="Planning / Attendance Analysis" sample="1" stacked="0" disable_linking="1">
                <field name="entry_date" interval="month" type="row"/>
                <field name="planned_hours" widget="float_time"/>
                <field name="effective_hours" widget="float_time"/>
                <field name="time_difference" widget="float_time" type="measure"/>
                <field name="planned_costs" widget="monetary"/>
                <field name="effective_costs" widget="monetary"/>
                <field name="cost_difference" widget="monetary"/>
            </graph>
        </field>
    </record>


    <record id="planning_attendance_analysis_report_view_search" model="ir.ui.view">
        <field name="name">planning.attendance.analysis.report.search</field>
        <field name="model">planning.attendance.analysis.report</field>
        <field name="arch" type="xml">
            <search string="Planning / Attendance Analysis">
                <field name="employee_id"/>
                <field name="department_id"/>
                <filter string="My Team" name="my_team" help="My Team" domain="[('employee_id.parent_id.user_id', '=', uid)]"/>
                <filter string="My Department" name="my_department" domain="[('employee_id.member_of_department', '=', True)]"/>
                <separator/>
                <filter string="Date" name="year" date="entry_date">
                    <filter name="entry_date_this_week" string="This Week" domain="[
                        ('entry_date', '&gt;=', '=week_start'),
                        ('entry_date', '&lt;', '=week_start +1w'),
                    ]"/>
                    <filter name="entry_date_today" string="Today" domain="[('entry_date', '=', 'today')]"/>
                    <filter name="entry_date_last_week" string="Last Week" domain="[
                        ('entry_date', '&gt;=', '=week_start -1w'),
                        ('entry_date', '&lt;', '=week_start'),
                    ]"/>
                </filter>
                <group>
                    <filter string="Department" name="resource_departement" context="{'group_by':'department_id'}"/>
                    <filter string="Employee" name="resource_employee" context="{'group_by':'employee_id'}"/>
                    <filter string="Date" name="date_month" context="{'group_by':'entry_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="planning_attendance_analysis_report_action" model="ir.actions.act_window">
        <field name="name">Planning / Attendance Analysis</field>
        <field name="res_model">planning.attendance.analysis.report</field>
        <field name="path">planning-attendance-analysis</field>
        <field name="view_mode">pivot,graph</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No data yet!
            </p><p>
                Compare the hours initially planned with the effective hours done in attendances
            </p>
        </field>
    </record>
</odoo>
