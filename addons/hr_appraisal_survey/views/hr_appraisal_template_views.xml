<odoo>
    <record id="hr_appraisal_template_view_form" model="ir.ui.view">
        <field name="name">hr.appraisal.template.form.inherit.hr_appraisal_survey</field>
        <field name="model">hr.appraisal.template</field>
        <field name="inherit_id" ref="hr_appraisal.view_hr_appraisal_template_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[field[@name='department_ids']]" position="after">
                <group>
                    <field name="survey_template_ids" widget="many2many_tags" placeholder="Every template allowed"  options="{'color_field': 'color'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="hr_appraisal_template_view_tree" model="ir.ui.view">
        <field name="name">hr.appraisal.template.list.inherit.hr_appraisal_survey</field>
        <field name="model">hr.appraisal.template</field>
        <field name="inherit_id" ref="hr_appraisal.hr_appraisal_template_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='department_ids']" position="after">
                <field name="survey_template_ids" widget="many2many_tags" optional="hide" options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
</odoo>
