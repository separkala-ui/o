<?xml version="1.0" ?>
<odoo>
    <record id="hr_appraisal_view_form" model="ir.ui.view">
        <field name="name">hr.appraisal.view.form</field>
        <field name="model">hr.appraisal</field>
        <field name="inherit_id" ref="hr_appraisal.view_hr_appraisal_form"/>
        <field name="arch" type="xml">
            <field name="manager_ids" position="after">
                <field name="employee_feedback_ids" invisible="1"/>
            </field>
            <button name="action_done" position="replace">
                <button name="action_done" string="Mark as Done" type="object" invisible="state != '2_pending' or employee_feedback_ids or not is_manager or uid == employee_user_id" data-hotkey="v"/>
                <button name="action_done" class="oe_highlight" string="Mark as Done" type="object" invisible="state != '2_pending' or not employee_feedback_ids or not is_manager or uid == employee_user_id" data-hotkey="v"/>
            </button>
            <xpath expr="//button[@name='action_done' and hasclass('oe_highlight')]" position="after">
                <button name="action_ask_feedback" data-hotkey="a" string="Ask Feedback" invisible="state != '2_pending' or not employee_feedback_ids" type="object"/>
            </xpath>
            <xpath expr="//button[@name='action_done']" position="before">
                <button name="action_ask_feedback" class="oe_highlight" data-hotkey="a" string="Ask Feedback" invisible="state != '2_pending' or employee_feedback_ids" type="object"/>
            </xpath>
            <xpath expr="//button[@name='action_open_goals']" position="before">
                <button class="oe_stat_button" name="action_open_survey_inputs" icon="fa-pencil-square-o" type="object" invisible="not employee_feedback_ids or not is_manager">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="completed_survey_count"/>
                            <span> / </span>
                            <field name="total_survey_count"/>
                        </span>
                        <span class="o_stat_text">Feedbacks</span>
                    </div>
                </button>
            </xpath>
            <div name="appraisal_ask_feedback_note" position="replace">
                <div name="appraisal_ask_feedback_note" class="d-flex">If you need,
                    <button name="action_ask_feedback" type="object" class="btn btn-link py-0 px-1 border-0">ask feedback</button>
                    to a selection of colleagues you work with.</div>
            </div>
        </field>
    </record>

    <record id="view_hr_appraisal_tree" model="ir.ui.view">
        <field name="name">hr.appraisal.view.list</field>
        <field name="model">hr.appraisal</field>
        <field name="inherit_id" ref="hr_appraisal.view_hr_appraisal_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_close']" position="after">
                <field name="employee_feedback_ids" string="Asked Feedback" widget="many2many_avatar_employee" optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>
