    <record id="project_task_action_fsm_planning_groupby_worksheet_view_activity" model="ir.actions.act_window.view">
        <field name="sequence" eval="33"/>
        <field name="view_mode">activity</field>
        <field name="view_id" ref="industry_fsm.project_task_view_activity"/>
        <field name="act_window_id" ref="project_task_action_fsm_planning_groupby_worksheet"/>
