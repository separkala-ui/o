<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_template_view_form" model="ir.ui.view">
        <field name="name">hr.contract.template.view.form.inherit.l10_sk_hr_payroll</field>
        <field name="model">hr.version</field>
        <field name="inherit_id" ref="hr.hr_contract_template_form_view"/>
        <field name="arch" type="xml">
            <group name="salary_info" position="inside">
                <group string="Meal Vouchers" invisible="country_code != 'SK'">
                    <label for="l10n_sk_meal_voucher_employee" string="Employee"/>
                    <div class="o_row">
                        <field name="l10n_sk_meal_voucher_employee" class="o_hr_narrow_field"/>
                        <span>/ voucher</span>
                    </div>
                    <label for="l10n_sk_meal_voucher_employer" string="Employer"/>
                    <div class="o_row">
                        <field name="l10n_sk_meal_voucher_employer" class="o_hr_narrow_field"/>
                        <span>/ voucher</span>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
