<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <group name="payroll_group" position="inside">
                <group string="Meal Vouchers" invisible="company_country_code != 'SK'">
                    <label for="l10n_sk_meal_voucher_employee" string="Employee"/>
                    <div class="o_row">
                        <field name="l10n_sk_meal_voucher_employee" class="o_hr_narrow_field"/>
                        <span>/ voucher</span>
                    </div>
                    <label for="l10n_sk_meal_voucher_employer" string="Employer"/>
                    <div class="o_row">
                        <field name="l10n_sk_meal_voucher_employer" class="o_hr_narrow_field"/>
                        <span>/ voucher</span>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
