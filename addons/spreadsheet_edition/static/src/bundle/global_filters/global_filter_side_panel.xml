<?xml version="1.0" encoding="utf-8"?>
<templates>

    <div t-name="spreadsheet_edition.GlobalFiltersSidePanel" class="o_spreadsheet_global_filters_side_panel h-100">
        <div class="h-100 overflow-auto" t-ref="filtersList">
            <Section t-if="filters.length">
                <div class="pivot_filter_section w-100 o-filter-drag-handle h-100 cursor-pointer"
                    t-foreach="filters"
                    t-as="filter"
                    t-key="'filter_' + filter_index"
                    t-att-class="{ 'o-filter-dragging': dnd.draggedItemId === filter.id }"
                    t-att-style="getFilterItemStyle(filter)"
                    t-on-pointerdown="(ev) => this.startDragAndDrop(filter, ev)"
                    t-on-click="() => this.openEditor(filter.id)"
                    >
                    <div class="py-1 px-2 d-flex flex-column shadow-sm pivot-dimension mb-2 w-100">
                        <div class="d-flex flex-row justify-content-between align-items-center">
                            <div class="d-flex align-items-center overflow-hidden text-nowrap">
                                <i t-if="filter.type === 'date'" class="fa fa-calendar me-2"/>
                                <i t-if="filter.type === 'relation'" class="fa fa-link me-2"/>
                                <i t-if="filter.type === 'text'" class="fa fa-font me-2"/>
                                <i t-if="filter.type === 'boolean'" class="fa fa-toggle-off me-2"/>
                                <i t-if="filter.type === 'selection'" class="fa fa-caret-down me-2"/>
                                <i t-if="filter.type === 'numeric'" class="fa fa-hashtag me-2"/>
                                <span t-esc="filter.label" class="o-fw-bold o_side_panel_filter_label"/>
                            </div>
                            <i class="o-button-icon fa fa-trash pe-1 ps-2" t-on-click="() => this.deleteFilter(filter.id)" />
                        </div>
                    </div>
                </div>
            </Section>
            <div t-if="!isReadonly" class="o-section">
                <div class="o_add_filter o-section-title">Create filter</div>
                <div class="o_filter_buttons_wrap grid">
                    <button t-on-click="newDate" class="o-button o_global_filter_new_time">
                        <i class="fa fa-calendar me-2"/>
                        <span>Date</span>
                    </button>
                    <button t-if="hasDataSources()" t-on-click="newRelation" class="o-button o_global_filter_new_relation">
                        <i class="fa fa-link me-2"/>
                        <span>Relation</span>
                    </button>
                    <button t-on-click="newText" class="o-button o_global_filter_new_text">
                        <i class="fa fa-font me-2"/>
                        <span>Text</span>
                    </button>
                    <button t-on-click="newBoolean" class="o-button o_global_filter_new_boolean">
                        <i class="fa fa-toggle-off me-2"/>
                        <span>Yes/No</span>
                    </button>
                    <button t-if="hasDataSources()" t-on-click="newSelection" class="o-button o_global_filter_new_selection">
                        <i class="fa fa-caret-down me-2"/>
                        <span>Selection</span>
                    </button>
                    <button t-on-click="newNumeric" class="o-button o_global_filter_new_numeric">
                        <i class="fa fa-hashtag me-2"/>
                        <span>Numeric</span>
                    </button>
                </div>
            </div>
            <GlobalFilterSuggestions t-if="!isReadonly"/>
        </div>
    </div>
</templates>
