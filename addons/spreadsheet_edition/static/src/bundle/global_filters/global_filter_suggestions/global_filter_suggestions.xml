<?xml version="1.0" encoding="utf-8"?>
<templates>

    <t t-name="spreadsheet_edition.GlobalFilterSuggestions">
        <Section t-if="suggestions.length" title.translate="Suggestions">
            <div class="o_filter_buttons_wrap grid global-filter-suggestions">
                <t t-foreach="suggestions" t-as="suggestion" t-key="suggestion.modelName">
                    <div class="btn btn-secondary" t-on-click="() => this.onSuggestionClick(suggestion)">
                        <t t-esc="suggestion.label"/>
                    </div>
                </t>
            </div>
        </Section>
    </t>

</templates>
