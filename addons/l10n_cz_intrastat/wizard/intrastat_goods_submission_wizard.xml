<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="intrastat_goods_submission_wizard_form" model="ir.ui.view">
            <field name="name">l10n_cz_intrastat.intrastat.goods.submission.wizard.form</field>
            <field name="model">l10n_cz_intrastat.intrastat.goods.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group>
                        <group id="instructions">
                            <separator string="Instructions"/>
                            <ol colspan="2">
                                <li>
                                    <div class="d-inline-block align-top">
                                        <span>Download your Intrastat return</span><br/>
                                        <button string='Download CSV' name="print_csv" type="object" class="btn-secondary"/>
                                    </div>
                                </li>
                                <li>Log in to <a href="https://celnisprava.gov.cz/cz/Stranky/Login.aspx?ReturnUrl=/cz/aplikace/_layouts/15/Authenticate.aspx?Source=%2Fcz%2Faplikace%2FStranky%2FinstatOnline%2Easpx" target="_blank">
                                    InstatOnline portal</a></li>
                                <li>Upload the CSV file</li>
                                <li>Confirm and send the form</li>
                            </ol>
                        </group>
                    </group>
                </field>
            </field>
        </record>

    </data>
</odoo>
