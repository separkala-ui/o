<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.whatsapp.website.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='order_confirmation_setting']/div" position="inside">
                <div class="row">
                    <label class="o_light_label col-lg-3" string="WhatsApp" for="wa_sale_template_id"/>
                    <field name="wa_sale_template_id"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
