<odoo>
    <data>
        <record id="hr_expense_stripe_test_shipping_wizard_form" model="ir.ui.view">
            <field name="name">hr.expense.stripe.test.shipping.wizard.form</field>
            <field name="model">hr.expense.stripe.test.shipping.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="card_shipping_status" readonly="True" string="Current Shipping Status"/>
                            <field name="new_shipping_status" widget="selection"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_update_shipping_status" class="btn btn-primary" type="object">Simulate Shipping</button>
                        <button special="cancel" class="btn btn-secondary" type="object" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
