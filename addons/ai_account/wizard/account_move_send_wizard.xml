<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_send_wizard_form" model="ir.ui.view">
            <field name="name">account.move.send.wizard.form.inherit</field>
            <field name="model">account.move.send.wizard</field>
            <field name="inherit_id" ref="account.account_move_send_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer/field[@name='template_id']" position="after">
                    <field name="body" widget="mail_composer_chatgpt" invisible="'email' not in sending_methods"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
