<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="DataCleaning.buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <xpath expr="." position="inside">
            <t t-if="hasSelectedRecords">
                <button type="button" class="btn btn-primary o_data_cleaning_validate_button" t-on-click="onValidateClick">
                    Validate
                </button>
                <button type="button" class="btn btn-secondary o_data_cleaning_unselect_button" t-on-click="onUnselectClick">
                    Unselect
                </button>
            </t>
        </xpath>
    </t>
</templates>
