        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <group name="benefits" position="inside">
                <label for="holidays"/>
                <div class="o_row">
                    <field name="holidays" class="o_hr_narrow_field"/>
                    <span>days / year</span>
                </div>
            </group>
        </field>
    </record>
</odoo>
