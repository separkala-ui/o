<?xml version="1.0"?>
<odoo>
    <record id="l10n_mx_regular_pay" model="hr.payroll.structure">
        <field name="name">Mexico: Regular Pay</field>
        <field name="code">MX_REGULAR</field>
        <field name="country_id" ref="base.mx"/>
        <field name="type_id" ref="l10n_mx_employee"/>
        <field name="unpaid_work_entry_type_ids" eval="[
            (4, ref('hr_work_entry.work_entry_type_unpaid_leave')),
            (4, ref('hr_work_entry.l10n_mx_work_entry_type_work_risk_imss')),
            (4, ref('hr_work_entry.l10n_mx_work_entry_type_maternity_imss')),
            (4, ref('hr_work_entry.l10n_mx_work_entry_type_disability_due_to_illness_imss')),
        ]"/>
        <field name="report_id" ref="action_report_payslip_mx"/>
        <field name="rule_ids" eval="[]"/>
    </record>
    <record id="l10n_mx_employee" model="hr.payroll.structure.type">
        <field name="default_struct_id" ref="l10n_mx_regular_pay"/>
    </record>

    <record id="l10n_mx_christmas_bonus" model="hr.payroll.structure">
        <field name="name">Mexico: Christmas Bonus</field>
        <field name="code">MX_CHRISTMAS</field>
        <field name="country_id" ref="base.mx"/>
        <field name="use_worked_day_lines" eval="False"/>
        <field name="type_id" ref="l10n_mx_employee"/>
        <field name="report_id" ref="action_report_payslip_mx"/>
        <field name="rule_ids" eval="[]"/>
    </record>
</odoo>
