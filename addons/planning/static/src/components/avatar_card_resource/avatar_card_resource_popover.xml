<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="resource_mail.AvatarCardResourcePopover" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_avatar_card_details')]" position="inside">
            <div t-if="roles?.length" class="o_resource_roles_tags">
                <span class="fw-bold">Roles</span>
                <div class="d-flex flex-wrap gap-1 mt-1">
                    <TagsList tags="roleTags" visibleItemsLimit="5"/>
                </div>
            </div>
        </xpath>
    </t>
</templates>
