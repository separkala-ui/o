<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="print_planning_slot_format" model="report.paperformat">
        <field name="name">Planning Slots</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">20</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="dpi">90</field>
    </record>

    <record id="report_planning_slot" model="ir.actions.report">
        <field name="name">Planning</field>
        <field name="model">planning.slot</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">planning.slot_report</field>
        <field name="report_file">planning.slot_report</field>
        <field name="print_report_name">'Planning'</field>
        <field name="paperformat_id" ref="planning.print_planning_slot_format"/>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
