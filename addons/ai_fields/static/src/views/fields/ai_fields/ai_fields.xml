<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="ai_fields.ComputeAiFieldBtn">
        <button class="btn btn-light flex-shrink-0 align-self-start p-0 me-2"
            t-on-click="onAiClick"
            title="Refresh value">
            <img src="/ai/static/description/icon.png" width="20" alt="ai icon"/>
        </button>
    </t>

    <t t-name="ai_fields.AiBooleanField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.BooleanField"/>
        </div>
        <t t-else="" t-call="web.BooleanField"/>
    </t>

    <t t-name="ai_fields.AiCharField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.CharField"/>
        </div>
        <t t-else="" t-call="web.CharField"/>
    </t>

    <t t-name="ai_fields.AiDateTimeField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <div class="flex-grow-1">
                <t t-call="web.DateTimeField"/>
            </div>
        </div>
        <t t-else="">
            <t t-call="web.DateTimeField"/>
        </t>
    </t>

    <t t-name="ai_fields.AiFloatField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.FloatField"/>
        </div>
        <t t-else="" t-call="web.FloatField"/>
    </t>

    <t t-name="ai_fields.AiHtmlField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <div class="flex-grow-1">
                <t t-call="html_editor.HtmlField"/>
            </div>
        </div>
        <t t-else="" t-call="html_editor.HtmlField"/>
    </t>

    <t t-name="ai_fields.AiIntegerField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.IntegerField"/>
        </div>
        <t t-else="" t-call="web.IntegerField"/>
    </t>

    <t t-name="ai_fields.AiMany2ManyTagsAvatarField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.Many2ManyTagsAvatarField"/>
        </div>
        <t t-else="" t-call="web.Many2ManyTagsAvatarField"/>
    </t>

    <t t-name="ai_fields.AiMany2ManyTagsField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.Many2ManyTagsField"/>
        </div>
        <t t-else="" t-call="web.Many2ManyTagsField"/>
    </t>

    <t t-name="ai_fields.AiMany2OneAvatarField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <div class="flex-grow-1">
                <t t-call="web.Many2OneAvatarField"/>
            </div>
        </div>
        <t t-else="" t-call="web.Many2OneAvatarField"/>
    </t>

    <t t-name="ai_fields.AiMany2OneField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <div class="flex-grow-1">
                <t t-call="web.Many2OneField"/>
            </div>
        </div>
        <t t-else="" t-call="web.Many2OneField"/>
    </t>

    <t t-name="ai_fields.AiMonetaryField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.MonetaryField"/>
        </div>
        <t t-else="" t-call="web.MonetaryField"/>
    </t>

    <t t-inherit="web.PropertiesField" t-inherit-mode="extension">
        <xpath expr="//PropertyValue" position="replace">
            <div t-if="!props.readonly and propertyConfiguration.ai and propertyConfiguration.system_prompt"
                class="d-flex">
                <button class="btn btn-light d-flex flex-shrink-0 align-self-baseline p-0 m-0 me-2"
                    t-on-click="() => this.onAiClick(propertyConfiguration.name)"
                    title="Refresh value">
                    <img src="/ai/static/description/icon.png" width="20" alt="ai icon"/>
                </button>
                <div class="flex-fill">$0</div>
            </div>
            <t t-else="">$0</t>
        </xpath>
    </t>

    <t t-name="ai_fields.AiSelectionField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <t t-call="web.SelectionField"/>
        </div>
        <t t-else="" t-call="web.SelectionField"/>
    </t>

    <t t-name="ai_fields.AiTextField">
        <div t-if="!props.readonly and isAiComputed" class="d-inline-flex w-100">
            <t t-call="ai_fields.ComputeAiFieldBtn"/>
            <div class="flex-grow-1">
                <t t-call="web.TextField"/>
            </div>
        </div>
        <t t-else="" t-call="web.TextField"/>
    </t>

</templates>
