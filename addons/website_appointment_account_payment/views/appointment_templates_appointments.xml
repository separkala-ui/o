<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="appointments_cards" inherit_id="website_appointment.appointment_card_body">
    <xpath expr="//div[hasclass('o_wappointment_card_location')]" position="after">
        <div t-if="appointment.has_payment_step and appointment.product_id" class="flex-shrink-0 text-primary small">
            <strong t-out="appointment.product_lst_price"
                t-options="{'widget': 'monetary', 'display_currency': appointment.product_currency_id}"/>
        </div>
    </xpath>
</template>

<template id="appointments_template_picture" inherit_id="website_appointment.dynamic_filter_template_appointment_type_picture">
    <xpath expr="//div[hasclass('o_wappointment_card_location')]" position="after">
        <div t-if="appointment.has_payment_step and appointment.product_id" class="badge text-bg-primary">
            <strong t-out="appointment.product_lst_price"
                t-options="{'widget': 'monetary', 'display_currency': appointment.product_currency_id}"/>
        </div>
    </xpath>
</template>

<template id="appointments_template_list" inherit_id="website_appointment.dynamic_filter_template_appointment_type_list">
    <xpath expr="//div[hasclass('o_wappointment_card_location')]" position="after">
        <div t-if="appointment.has_payment_step and appointment.product_id" class="text-primary small">
            <strong t-out="appointment.product_lst_price"
                t-options="{'widget': 'monetary', 'display_currency': appointment.product_currency_id}"/>
        </div>
    </xpath>
</template>

</odoo>
