<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_au_activity_submit_stp" model="mail.activity.type">
        <field name="name">Submit STP</field>
        <field name="res_model">l10n_au.stp</field>
        <field name="icon">fa-gavel</field>
        <field name="summary">Submit to ATO</field>
    </record>

    <record id="l10n_au_activity_submit_super" model="mail.activity.type">
        <field name="name">Process super payments</field>
        <field name="res_model">l10n_au.super.stream</field>
        <field name="icon">fa-arrow-circle-right</field>
        <field name="summary">Process super payments</field>
    </record>

    <record id="l10n_au_activity_resubmit_super" model="mail.activity.type">
        <field name="name">Resubmit super payments</field>
        <field name="res_model">l10n_au.super.stream</field>
        <field name="icon">fa-warning</field>
        <field name="decoration_type">warning</field>
        <field name="summary">Resubmit super payments</field>
    </record>

</odoo>
