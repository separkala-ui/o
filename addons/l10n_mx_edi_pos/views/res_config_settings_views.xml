<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.point_of_sale.mx</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="95"/>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//setting[@id='pos_use_ticket_qr_code']" position="after">
                    <setting string="Re-invoicing account" invisible="company_country_code != 'MX'">
                        <div class="content-group mt16">
                            <div class="col mt-16">
                                <div class="content-group row">
                                    <label for="l10n_mx_pos_account_income_re_invoicing_id" class="col-lg-2" string="Account"/>
                                    <field name="l10n_mx_pos_account_income_re_invoicing_id"/>
                                </div>
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
