<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mrp_workorder.QualityCheck" t-inherit-mode="extension">
        <xpath expr="//button[@t-if='hasInstruction']" position="after">
            <button t-if="type === 'passfail' &amp;&amp; !isComplete" t-on-click.stop="failCheck" class="o_btn_icon btn"
                    t-att-barcode_trigger="isActive ? 'FAIL' : false"
                    t-attf-class="{{isActive ? 'btn-danger' : 'btn-outline-secondary'}}">
                <i class="fa fa-times" role="img"/>
            </button>
        </xpath>
        <xpath expr="//span[@t-out='showQty']" position="attributes">
            <attribute name="t-att-class">passFailTypes.includes(type) ? (passed ? 'text-success' : 'text-danger') : ''</attribute>
        </xpath>
    </t>
</templates>
