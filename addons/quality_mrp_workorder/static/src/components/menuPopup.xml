<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="mrp_workorder.MrpDisplayMenuDialog" t-inherit-mode="extension">
        <xpath expr="//div[@name='block']" position="before">
            <div class="col-6 p-1" t-if="props.record.resModel === 'mrp.workorder'">
                <button class="d-flex flex-column gap-1 btn btn-warning fs-3 w-100 h-100 py-3"
                    t-on-click="() => this.callAction('button_quality_alert')">
                    <i class="fa fa-exclamation-triangle me-2"/>Create a Quality Alert
                </button>
            </div>
        </xpath>
    </t>
</templates>
