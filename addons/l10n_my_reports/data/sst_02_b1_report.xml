<?xml version="1.0" encoding="UTF-8"?>

<odoo auto_sequence="1">

    <record id="tax_report_sst_02_b1" model="account.report">
        <field name="name">SST-02 (B1)</field>
        <field name="country_id" ref="base.my"/>
        <field name="search_bar" eval="True"/>
        <field name="load_more_limit" eval="80"/>
        <field name="filter_unfold_all" eval="True"/>
        <field name="sequence">0</field>
        <field name="custom_handler_model_id" ref="model_l10n_my_sst_02_b1_report_handler"/>
        <field name="column_ids">
            <record id="sst_02_b1_description_of_taxable_goods" model="account.report.column">
                <field name="name">Taxable Goods / Services</field>
                <field name="name@ms_MY">Barang / Perkhidmatan Boleh Dikenakan Cukai</field>
                <field name="expression_label">product_name</field>
                <field name="figure_type">string</field>
            </record>
            <record id="sst_02_b1_customs_tariff_code_service_type_code" model="account.report.column">
                <field name="name">Customs Tariff Code / Service Type Code</field>
                <field name="name@ms_MY">Kod Tariff Kastam / Kod Jenis Perkhidmatan</field>
                <field name="expression_label">customs_code</field>
                <field name="figure_type">string</field>
            </record>
            <record id="sst_02_b1_value_of_taxable_goods_sold" model="account.report.column">
                <field name="name">Value of Taxable Goods Sold / Work Performed</field>
                <field name="name@ms_MY">Nilai Barangan Dijual / Nilai Kerja Yang Dilakukan</field>
                <field name="expression_label">value_goods_sold</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="sst_02_b1_value_of_goods_for_own_used" model="account.report.column">
                <field name="name">Value of Goods For Own Use / Disposed / Free Services</field>
                <field name="name@ms_MY">Nilai Barangan Untuk Kegunaan Sendiri / Dilupuskan / Perkhidmatan Percuma</field>
                <field name="expression_label">value_goods_own_use</field>
                <field name="figure_type">monetary</field>
            </record>
            <record id="sst_02_b1_value_of_taxable_service" model="account.report.column">
                <field name="name">Value of Taxable Service</field>
                <field name="name@ms_MY">Nilai Perkhidmatan Bercukai</field>
                <field name="expression_label">value_taxable_service</field>
                <field name="figure_type">monetary</field>
            </record>
        </field>
    </record>

    <record id="tax_report_sst_02" model="account.report">
        <field name="name">SST-02</field>
        <field name="root_report_id" ref="account.generic_tax_report"/>
        <field name="country_id" ref="base.my"/>
        <field name="sequence">1</field>
        <field name="use_sections" eval="True"/>
        <field name="section_report_ids" eval="[(6, 0, [ref('l10n_my_reports.tax_report_sst_02_b1'), ref('l10n_my.tax_report_sst_02_b2')])]"/>
    </record>

</odoo>
