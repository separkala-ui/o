<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_interchange_id" model="ir.ui.view">
        <field name="name">res.company.form.intrastat.interchange</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                    <field name="interchange_agreement_id" placeholder="XGTEST" invisible="country_code != 'DE'"/>
            </xpath>
        </field>
    </record>
</odoo>
