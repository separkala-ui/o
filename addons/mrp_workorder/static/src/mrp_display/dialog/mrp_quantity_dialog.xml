<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mrp_workorder.MrpQuantityDialog">
        <div class="o_tablet_popups">
            <Dialog size="'sm'" title.translate="Quantity" modalRef="modalRef">
                <FloatField name="'quantity'" record="props.record"/>
                <t t-set-slot="footer">
                    <button class="btn btn-lg btn-primary" t-on-click="apply">Apply</button>
                    <button t-if="props.record.resModel === 'stock.move.line'"
                            class="btn btn-lg btn-danger" t-on-click="remove">Remove</button>
                </t>
            </Dialog>
        </div>
    </t>
</templates>
