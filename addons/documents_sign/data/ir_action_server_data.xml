<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_actions_server_create_sign_template_direct" model="ir.actions.server">
            <field name="name">Sign</field>
            <field name="model_id" ref="documents.model_documents_document"/>
            <field name="state">multi</field>
            <field name="child_ids">
                <record id="ir_actions_server_create_sign_template_direct_code" model="ir.actions.server">
                    <field name="name">Sign</field>
                    <field name="model_id" ref="documents.model_documents_document"/>
                    <field name="state">code</field>
                    <field name="code">
                        action = records.document_sign_create_sign_template(env.ref('documents.document_internal_folder').id)
                    </field>
                </record>
            </field>
            <field name="group_ids" eval="[Command.link(ref('base.group_user'))]"/>
        </record>

        <function model="documents.document" name="_data_embed_if_records_exist" eval="[
            'documents.document_internal_folder',
            'documents_sign.ir_actions_server_create_sign_template_direct'
        ]"/>
        <function model="documents.document" name="_data_embed_if_records_exist" eval="[
            'documents.document_inbox_folder',
            'documents_sign.ir_actions_server_create_sign_template_direct'
        ]"/>

    </data>
</odoo>
