<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="tax_return_submission_wizard_form" model="ir.ui.view">
            <field name="name">l10n_lu_reports.tax.return.submission.wizard.form</field>
            <field name="model">l10n_lu_reports.tax.return.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group>
                        <group id="instructions">
                            <separator string="Instructions"/>
                            <ol colspan="2">
                                <li>
                                    <div class="d-inline-block align-top">
                                        <span>Download your tax return to submit it.</span><br/>
                                        <button string='Download XML' name="export_xml" type="object" class="btn-secondary"/>
                                    </div>
                                </li>
                                <li>Log in to <a href="https://myguichet.lu" target="_blank">MyGuichet</a>.</li>
                                <li>Navigate to the eCDF section.</li>
                                <li>Upload your tax return XML file.</li>
                                <li>Submit the return.</li>
                            </ol>
                        </group>
                    </group>
                </field>
            </field>
        </record>
    </data>
</odoo>
