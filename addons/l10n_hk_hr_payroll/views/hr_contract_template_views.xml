<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_template_view_form" model="ir.ui.view">
        <field name="name">hr.contract.template.view.form.inherit.l10_hk_hr_payroll</field>
        <field name="model">hr.version</field>
        <field name="inherit_id" ref="hr.hr_contract_template_form_view"/>
        <field name="arch" type="xml">
            <group name="salary_info" position="inside">
                <group string="Benefits" invisible="country_code != 'HK'">
                    <label for="l10n_hk_internet" string="Internet Subscription"/>
                    <div class="o_row">
                        <field name="l10n_hk_internet" class="o_hr_narrow_field"/>
                        <span>/ month</span>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
