<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="hr_payroll.VersionPayrunListController.Buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <xpath expr="." position="inside">
            <button class="btn btn-primary" t-on-click="generatePayslips" t-att-disabled="model.root.selection.length &lt; 1 || state.disabled">
                Select
            </button>
            <button class="btn btn-secondary" t-on-click="onBack" t-if="!props.context.active_id">
                Back
            </button>
            <button class="btn btn-secondary" t-on-click="onClose" t-else="">
                Discard
            </button>
        </xpath>
    </t>
</templates>
