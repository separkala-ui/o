<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="hr_payroll.EmployeeDeclarationListController" t-inherit="web.ListView">
        <xpath expr="//SelectionBox" position="after">
                <button t-on-click="generatePdfs" t-att-class="checkOnlyDrafts()" t-att-hidden="noDrafts()" id="generate_pdfs" type="button" class="btn">
                    <span>Generate <t t-esc="getNumberToGenerate()"/> PDFs</span>
                </button>
        </xpath>
    </t>
</templates>
