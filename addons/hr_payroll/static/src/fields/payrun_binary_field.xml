<templates>
    <t t-name="hr_payroll.PayRunBinaryField" t-inherit="web.BinaryField" t-inherit-mode="primary">
        <xpath expr="//input[@t-att-value='fileName']" position="attributes">
            <attribute name="t-att-value">'Download ' + format</attribute>
        </xpath>
        <xpath expr="//t[@t-if='fileName']" position="attributes">
            <attribute name="t-if">format</attribute>
            <attribute name="t-esc">'Download ' + format</attribute>
        </xpath>
        <xpath expr="//span[hasclass('fa-download')]" position="attributes">
            <attribute name="class" add="align-items-center gap-2" remove="me-2" separator=" "/>
        </xpath>
        <xpath expr="//a[hasclass('o_form_uri')]" position="attributes">
            <attribute name="class" add="d-flex align-items-center gap-2" remove="me-2" separator=" "/>
        </xpath>
    </t>
</templates>
