<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="hr_payroll.MoreInfo">
        <span t-on-click.stop="onClickMoreInfo" class="cursor-pointer" t-if="Object.keys(allowedSlots).length">
            <a class="fa fa-info-circle"/>
        </span>
    </t>

    <t t-name="hr_payroll.MoreInfoCardPopover">
        <t t-if="env.isSmall">
            <Dialog title.translate="Additional Information">
                <t t-call="{{ constructor.subTemplates.body }}" />
            </Dialog>
        </t>
        <t t-else="">
            <t t-call="{{ constructor.subTemplates.popover }}" />
        </t>
    </t>

    <t t-name="hr_payroll.MoreInfoCardPopover.popover">
        <div class="card-header d-flex justify-content-between border-bottom">
            <span class="popover-header border-0 text-truncate fw-medium bg-transparent" t-esc="'Additional Information'" t-att-data-tooltip="'Additional Information'"/>
        </div>
        <div class="o_cw_body">
            <t t-call="{{ constructor.subTemplates.body }}" />
        </div>
    </t>

    <t t-name="hr_payroll.MoreInfoCardPopover.body">
        <div class="container align-items-start py-2 w-100">
            <t t-foreach="Object.entries(props.slots).map(([slotName]) => slotName)" t-as="slot" t-key="slot_value">
                <div class="row py-1">
                    <t t-slot="{{ slot_value }}"/>
                </div>
            </t>
        </div>
    </t>
</templates>
