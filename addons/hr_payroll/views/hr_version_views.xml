<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payroll_hr_version_list_view_payrun" model="ir.ui.view">
        <field name="name">payroll.hr.version.view.list.payrun</field>
        <field name="model">hr.version</field>
        <field name="arch" type="xml">
            <list string="Records" default_order='date_version DESC' create="0" delete="0" js_class="hr_version_payrun_list">
                <field name="employee_id" optional="show" widget="many2one_avatar_employee"/>
                <field name="date_version" readonly="False" string="Effective Date"/>
                <field name="contract_date_start" string="Start" optional="hide"/>
                <field name="contract_date_end" string="End" optional="hide"/>
                <field name="currency_id" column_invisible="1"/>
                <field name="wage" widget="monetary" optional="hide"/>
                <field name="contract_type_id" optional="hide"/>
                <field name="structure_type_id" optional="hide"/>
                <field name="job_id" optional="show"/>
                <field name="department_id" optional="show"/>
                <field name="hr_responsible_id" optional="hide"/>
                <field name="resource_calendar_id" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" readonly="1" optional="hide"/>
                <field name="create_uid" optional="hide"/>
                <field name="create_date" optional="hide"/>
                <field name="last_modified_uid" optional="hide" readonly="1"/>
                <field name="last_modified_date" optional="hide" readonly="1"/>
            </list>
        </field>
    </record>

    <record id="payroll_hr_version_list_view_filter_payrun" model="ir.ui.view">
        <field name="name">payroll.hr.version.view.list.filter.payrun</field>
        <field name="model">hr.version</field>
        <field name="arch" type="xml">
            <search string="Employees">
                <field name="employee_id" string="Employee" filter_domain="['|', ('employee_id.work_email', 'ilike', self), ('employee_id.name', 'ilike', self)]"/>
                <field name="department_id"/>
                <field name="job_id"/>
                <field name="resource_calendar_id"/>
                <field name="company_id"/>
                <separator/>
                <filter name="employee_id.newly_hired" string="Newly Hired" domain="[('employee_id.newly_hired', '=', True)]"/>
                <filter name="departure_reason_id" string="Departure" domain="[('departure_reason_id', '!=', False)]" />
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group>
                    <filter name="group_department" string="Department" domain="[]" context="{'group_by': 'department_id'}"/>
                    <filter name="group_job" string="Job Position" domain="[]" context="{'group_by': 'job_id'}"/>
<!--                    <filter name="employee_id.category_ids" string="Tags" domain="[]" context="{'group_by': 'category_ids'}"/>-->
                </group>
            </search>
        </field>
    </record>

    <record id="action_payroll_hr_version_list_view_payrun" model="ir.actions.act_window">
        <field name="name">Select Employees</field>
        <field name="res_model">hr.version</field>
        <field name="view_mode">list</field>
        <field name="target">new</field>
        <field name="view_id" ref="hr_payroll.payroll_hr_version_list_view_payrun"/>
        <field name="search_view_id" ref="hr_payroll.payroll_hr_version_list_view_filter_payrun"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Records.
            </p><p>
                No record fit your period and salary structure type, please go back to select another period and/or
                salary structure type.
            </p>
        </field>
    </record>
</odoo>
