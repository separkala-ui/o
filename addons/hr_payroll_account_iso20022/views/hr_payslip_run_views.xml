<?xml version="1.0"?>
<odoo>
    <record id="hr_payslip_run_view_kanban" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit.kanban</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_view_kanban"/>
        <field name="arch" type="xml">
            <button name="action_payment_report" position="attributes">
                <attribute name="invisible" add="not payment_report" separator="or"/>
            </button>
            <button name="action_payment_report" position="before">
                <button name="action_payment_report" type="object" class="btn btn-primary" string="Payment Report" invisible="state != '02_close' or payment_report" options="{'is_priority': True}"/>
            </button>
            <button name="action_paid" position="attributes">
                <attribute name="invisible" add="not payment_report" separator="or"/>
            </button>
            <button name="action_paid" position="before">
                <button name="action_paid" type="object" class="btn btn-secondary" string="Mark as Paid" invisible="state != '02_close' or payment_report"/>
            </button>
        </field>
    </record>
</odoo>
