<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_be_individual_account_view_form" model="ir.ui.view">
        <field name="name">l10n_be.individual.account.form</field>
        <field name="model">l10n_be.individual.account</field>
        <field name="inherit_id" ref="l10n_be_hr_payroll.l10n_be_individual_account_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//p[@name='save_warning']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <div name="button_box" position="inside">
                <button name="action_see_documents" type="object" class="oe_stat_button" icon="fa-file-text-o" invisible="documents_count == 0">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="documents_count"/></span>
                        <span class="o_stat_text">Documents</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

</odoo>
