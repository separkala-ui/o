<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Thread" t-inherit-mode="extension">
        <xpath expr="//div[@data-name='LivechatWelcomeMessage']" position="replace">
            <t t-if="props.thread?.livechatWelcomeMessage and !props.thread?.messages.length">
                <t>$0</t>
            </t>
        </xpath>
    </t>
</templates>
