<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="l10n_in_labour_welfare_fund_wizard_view_form" model="ir.ui.view">
        <field name="name">l10n.in.labour.welfare.fund.wizard.view.form</field>
        <field name="model">l10n.in.labour.welfare.fund.wizard</field>
        <field name="arch" type="xml">
            <form string="Labour Welfare Fund Export">
                <sheet>
                    <group>
                        <div>
                            <div class="o_row">
                                <span class="oe_inline">From</span>
                                <field name="date_from" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                                <span class="oe_inline">To</span>
                                <field name="date_to" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                            </div>
                        </div>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="department_id" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Export XLSX" name="action_export_xls" type="object" class="btn-primary"/>
                    <button special="cancel" string="Close" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="l10n_in_labour_welfare_fund_wizard_action" model="ir.actions.act_window">
        <field name="name">Labour Welfare Fund Report</field>
        <field name="res_model">l10n.in.labour.welfare.fund.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_l10n_in_labour_welfare_fund_wizard"
        name="Labour Welfare Fund Report"
        action="l10n_in_labour_welfare_fund_wizard_action"
        parent="l10n_in_hr_payroll.menu_reporting_l10n_in"
        sequence="35"
    />
</odoo>
