<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="account_return_kanban_view_inherit_label" model="ir.ui.view">
            <field name="name">account.return.kanban.inherit.label</field>
            <field name="model">account.return</field>
            <field name="inherit_id" ref="account_reports.account_return_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_submission']" position="after">
                    <field name="is_quarter_month"/>
                    <field name="country_code"/>
                </xpath>

                <xpath expr="//div[hasclass('w-100') and hasclass('p-2') and hasclass('px-3')]" position="after">
                    <t t-set="is_italian_non_quarterly"
                       t-value="record.country_code.raw_value == 'IT' and !record.is_quarter_month.raw_value"/>
                </xpath>

                <xpath expr="//button[@name='action_submit']" position="replace">
                    <button class="btn btn-secondary"
                            type="object"
                            name="action_submit"
                            invisible="state != 'reviewed' or is_completed or not is_main_company_active">
                        <t t-esc="is_italian_non_quarterly ? 'Close' : 'Submit'"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
