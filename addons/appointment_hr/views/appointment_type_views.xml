<?xml version="1.0"?>
<odoo>
    <record id="appointment_type_view_form_inherit_appointment_hr" model="ir.ui.view">
        <field name="name">appointment.type.form.inherit.appointment.hr</field>
        <field name="model">appointment.type</field>
        <field name="inherit_id" ref="appointment.appointment_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='options_right_details']" position="inside">
                <label for="work_hours_activated" invisible="schedule_based_on == 'resources' or category == 'custom'"/>
                <div class="d-flex" invisible="schedule_based_on == 'resources' or category == 'custom'">
                    <field name="work_hours_activated"/>
                    <div invisible="not work_hours_activated">
                        <span>enforced</span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
