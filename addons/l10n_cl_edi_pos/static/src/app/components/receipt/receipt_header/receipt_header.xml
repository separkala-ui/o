<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="l10n_cl_edi_pos.ReceiptHeader" t-inherit="point_of_sale.ReceiptHeader" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="before">
            <div t-if="isChileanCompany" class="pt-3">
                <div class="chili-ticket-info fw-bolder border border-dark d-flex flex-column align-items-center ">
                    <span>RUT: <t t-out="order.company.vat"/></span>
                    <t t-out="order.account_move?.l10n_latam_document_type_id.name"/>
                    <span>Nº: <t t-out="order.account_move?.l10n_latam_document_number"/></span>
                </div>
                <div class="chili-regional-office text-center fw-bolder" t-out="officeSelection"/>
                <div class="text-center fw-bolder pb-2" t-esc="order.formatDateOrTime('date_order')" />
            </div>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-contact')]" position="after">
            <div t-if="isChileanCompany and order.partner_id and order.isFactura()" class="pos-receipt-partner text-center" style="font-size: 75%;">
                <!-- partner informations -->
                <div>Cliente: <t t-esc="order.partner_id.name" /></div>
                <div>RUT: <t t-esc="order.partner_id.vat" /></div>
                <div>Dirección: <t t-esc="order.partner_id.street" /> <t t-if="order.partner_id.street2" t-esc="order.partner_id.street2" /></div>
                <div>Comuna: <t t-esc="order.partner_id.city" /></div>
                <div>Giro: <t t-esc="order.partner_id.l10n_cl_activity_description" /></div>
                <div>Teléfono: <t t-esc="order.partner_id.phone" /></div>
            </div>
        </xpath>
    </t>
</templates>
