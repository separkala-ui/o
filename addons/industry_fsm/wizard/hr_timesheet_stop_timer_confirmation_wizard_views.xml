<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_timesheet_stop_timer_confirmation_wizard_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.timesheet.stop.timer.confirmation.wizard.form.inherit</field>
            <field name="model">hr.timesheet.stop.timer.confirmation.wizard</field>
            <field name="inherit_id" ref="timesheet_grid.hr_timesheet_stop_timer_confirmation_wizard_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="js_class">fsm_stop_timer_wizard_form</attribute>
                </xpath>
                <xpath expr="//form" position="inside">
                    <field name="allow_geolocation" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
