<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rating_rating_action_fsm" model="ir.actions.act_window">
        <field name="name">Customer Ratings</field>
        <field name="res_model">rating.rating</field>
        <field name="path">field-service-task-ratings</field>
        <field name="view_mode">kanban,list,pivot,graph,form</field>
        <field name="domain">[('consumed', '=', True), ('project_id', '!=', False), ('project_id.is_fsm', '=', True)]</field>
        <field name="search_view_id" ref="project.rating_rating_view_search_project"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No customer ratings yet
            </p>
            <p>
                Measure your customer satisfaction by sending rating requests when your tasks reach a certain stage.
            </p>
        </field>
        <field name="context">{'search_default_filter_rated_on': 1, 'graph_groupbys': ['rated_partner_id']}</field>
    </record>

    <record id="rating_rating_action_fsm_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="5"/>
        <field name="view_mode">kanban</field>
        <field name="act_window_id" ref="rating_rating_action_fsm"/>
        <field name="view_id" ref="rating.rating_rating_view_kanban"/>
    </record>

    <record id="rating_rating_action_fsm_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">list</field>
        <field name="act_window_id" ref="rating_rating_action_fsm"/>
        <field name="view_id" ref="project.rating_rating_view_tree_project"/>
    </record>

    <record id="rating_rating_action_fsm_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="40"/>
        <field name="view_mode">form</field>
        <field name="act_window_id" ref="rating_rating_action_fsm"/>
        <field name="view_id" ref="project.rating_rating_view_form_project"/>
    </record>

    <record id="rating_rating_action_fsm_pivot" model="ir.actions.act_window.view">
        <field name="sequence" eval="40"/>
        <field name="view_mode">pivot</field>
        <field name="act_window_id" ref="rating_rating_action_fsm"/>
        <field name="view_id" ref="project.rating_rating_view_pivot"/>
    </record>

    <record id="rating_rating_action_fsm_graph" model="ir.actions.act_window.view">
        <field name="sequence" eval="40"/>
        <field name="view_mode">graph</field>
        <field name="act_window_id" ref="rating_rating_action_fsm"/>
        <field name="view_id" ref="project.rating_rating_view_graph"/>
    </record>
</odoo>
