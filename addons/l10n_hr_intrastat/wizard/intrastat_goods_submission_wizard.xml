<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="intrastat_goods_submission_wizard_form" model="ir.ui.view">
            <field name="name">l10n_hr_intrastat.intrastat.goods.submission.wizard.form</field>
            <field name="model">l10n_hr_intrastat.intrastat.goods.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group>
                        <group id="instructions">
                            <ol colspan="2">
                                <li>
                                    <div class="d-inline-block align-top">
                                        <span>Download your intrastat return</span><br/>
                                        <button string="Download PDF" name="print_pdf" type="object" class="btn-secondary mb-1"/>
                                    </div>
                                </li>
                                <li>Log in to <a href="https://e-carina.carina.hr/ciws-public/en.html" target="_blank">CIWS portal</a></li>
                                <li>Fill the Intrastat Form online <a href="https://e-carina.carina.hr/ciws" target="_blank">via the CIWS</a></li>
                                <li>Submit the Intrastat Form through CIWS</li>
                            </ol>
                        </group>
                    </group>
                </field>
            </field>
        </record>

    </data>
</odoo>
