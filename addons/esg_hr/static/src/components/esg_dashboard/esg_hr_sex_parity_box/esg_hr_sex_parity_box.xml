<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="esg_hr.SexParityBox">
        <div class="card p-3">
            <div name="title" class="d-flex justify-content-start mb-2">
                <a href="#" class="fs-4 fw-bold" t-on-click="openEmployeeReportLeadershipViews">
                    Sex Parity
                </a>
            </div>
            <div class="d-flex justify-content-end mb-2 pt-2" t-if="props.data.overall_pay_gap != null">
                <div class="row">
                    <div class="col text-start">
                        <span class="fw-bold">
                            Pay Gap
                        </span>
                    </div>
                    <div class="col-auto text-end">
                        <t t-esc="overallPayGapPercentage"/>
                    </div>
                </div>
            </div>
            <!-- Pie Chart -->
            <EsgGraphDashboard config="props.data.graph_config"/>
        </div>
    </t>
</templates>
