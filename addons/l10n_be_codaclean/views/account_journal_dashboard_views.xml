<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_journal_dashboard_inherit_l10n_be_codaclean" model="ir.ui.view">
            <field name="name">account.journal.dashboard.inherit.l10n_be_codaclean</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@id="dashboard_bank_cash_left"]' position='inside'>
                    <t t-if="journal_type == 'bank' and dashboard.bank_statements_source == 'l10n_be_codaclean'">
                        <t t-if="dashboard.l10n_be_codaclean_is_connected">
                            <a type="object" name="l10n_be_codaclean_manually_fetch_coda_transactions" class="btn btn-link" groups="account.group_account_manager" role="button">Fetch from Codaclean</a>
                        </t>
                        <t t-else="">
                            <a name="%(account.action_account_config)d" type="action" class="text-warning">
                                <i class="fa fa-exclamation-triangle me4"/>
                                Codaclean disconnected
                            </a>
                        </t>
                    </t>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
