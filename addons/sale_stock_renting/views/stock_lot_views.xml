<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="stock_lot_kanban_allocation" model="ir.ui.view">
        <field name="name">stock.lot.kanban.allocation.inherit.stock</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_kanban"/>
        <field name="mode">primary</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <kanban position="inside">
                <control>
                    <button
                        string="Auto assign"
                        name="action_auto_assign_lots"
                        type="object"
                        class="btn-primary"
                        context="{'order_line_id': parent.id}"
                    />
                    <create name="add_serial" string="Add Serial Number"/>
                </control>
            </kanban>
        </field>
    </record>

</odoo>
