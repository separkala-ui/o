<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_equity_cap_table_pivot" model="ir.ui.view">
        <field name="name">equity.cap.table.pivot</field>
        <field name="model">equity.cap.table</field>
        <field name="arch" type="xml">
            <pivot string="Cap Table Pivot" disable_linking="1" sample="1">
                <field name="security_class_id" type="col"/>
                <field name="holder_id" type="row"/>
                <field name="securities" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_equity_cap_table_pivot" model="ir.actions.act_window">
        <field name="name">Cap Table Pivot</field>
        <field name="res_model">equity.cap.table</field>
        <field name="path">cap-table-pivot</field>
        <field name="view_mode">pivot</field>
        <field name="target">current</field>
    </record>

    <record id="action_equity_cap_table" model="ir.actions.client">
        <field name="name">Cap Table</field>
        <field name="tag">equity.CapTable</field>
        <field name="path">cap-table</field>
    </record>

    <record id="action_equity_valuation_graph" model="ir.actions.client">
        <field name="name">Valuation</field>
        <field name="tag">equity.ValuationChart</field>
        <field name="path">valuation-graph</field>
    </record>
</odoo>
