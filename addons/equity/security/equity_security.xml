<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_groups_privilege_equity" model="res.groups.privilege">
            <field name="name">Equity</field>
            <field name="category_id" ref="base.module_category_accounting"/>
            <field name="sequence">8</field>
        </record>

        <record id="group_equity_viewer" model="res.groups">
            <field name="name">Viewer</field>
            <field name="sequence">10</field>
            <field name="privilege_id" ref="res_groups_privilege_equity"/>
            <field name="implied_ids" eval="[Command.link(ref('base.group_user'))]"/>
        </record>

        <record id="group_equity_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="sequence">20</field>
            <field name="privilege_id" ref="res_groups_privilege_equity"/>
            <field name="implied_ids" eval="[Command.link(ref('equity.group_equity_viewer'))]"/>
            <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
        </record>

        <record id="own_transaction_rule" model="ir.rule">
            <field name="name">Own transaction</field>
            <field name="model_id" ref="model_equity_transaction"/>
            <field name="domain_force">['|', ('seller_id', '=', user.id), ('subscriber_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal')), (4, ref('base.group_user'))]"/>
        </record>

        <record id="own_transaction_rule" model="ir.rule">
            <field name="name">All transaction</field>
            <field name="model_id" ref="model_equity_transaction"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('equity.group_equity_viewer'))]"/>
        </record>
    </data>
</odoo>
