<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="group_commission_forecast" model="res.groups">
            <field name="name">Enable Commission Forecast</field>
        </record>
        <record id="rule_commission_salesman" model="ir.rule">
            <field name="name">Adjustments Record Rules Salesman</field>
            <field name="model_id" ref="model_sale_commission_achievement"/>
            <field name="domain_force">['|', ('add_user_id.user_id', '=', user.id), ('reduce_user_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
        <record id="rule_commission_manager" model="ir.rule">
            <field name="name">Adjustments Record Rules Manager</field>
            <field name="model_id" ref="model_sale_commission_achievement"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>

        <record id="sale_commission_report_rule_salesman" model="ir.rule">
            <field name="name">Salesman: Own Commission Reports</field>
            <field name="model_id" ref="model_sale_commission_report"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record id="sale_commission_report_rule_manager" model="ir.rule">
            <field name="name">Manager: All Commission Reports</field>
            <field name="model_id" ref="model_sale_commission_report"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>
    </data>
</odoo>
