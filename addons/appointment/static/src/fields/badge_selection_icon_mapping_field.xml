<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="appointment.BadgeSelectionIconMappingField" t-inherit="web.BadgeSelectionField" t-inherit-mode="primary">
        <xpath expr="//span[hasclass('o_selection_badge')]" position="attributes">
            <attribute name="t-esc"/>
            <attribute name="class" add="me-2" remove="badge rounded-pill" separator=" "/>
        </xpath>
        <xpath expr="//span[hasclass('o_selection_badge')]" position="inside">
            <span t-attf-class="fa {{getIconMapping(option[0])}} pe-1"/>
            <span t-out="option[1]"/>
        </xpath>
    </t>

</templates>
