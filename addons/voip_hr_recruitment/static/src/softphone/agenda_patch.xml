<?xml version="1.0"?>
<templates>
    <t t-inherit="voip.Agenda" t-inherit-mode="extension">
        <xpath expr="//t[hasclass('o-voip-Agenda-xpathTarget')]" position="before">
            <t t-if="activity.partner?.applicant_ids?.length > 0">
                <button class="btn btn-link ms-n2 px-2" t-on-click="() => this.onClickApplicant(activity.partner)">
                    <i class="oi oi-suitcase oi-fw me-1" aria-hidden="true"/>Applicant
                </button>
            </t>
        </xpath>
    </t>
</templates>
