<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_stock" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.stock.enterprise</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@name='shipping_setting_container']//setting[@id='stock_text_confirmation']//div[@id='module_install_warning']" position="inside">
                <field name="module_whatsapp_stock" invisible="1"/>
                <div class="mt16 text-warning" id="module_install_warning_whatsapp" invisible="stock_confirmation_type != 'whatsapp'">
                    <strong>Save</strong> this page and come back here to set up the feature.
                </div>
            </xpath>
        </field>
    </record>

</odoo>
