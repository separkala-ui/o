<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_inherit_work_entry_attendance" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.work.entry.attendance</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_work_entry.hr_employee_view_form"/>
        <field name="arch" type="xml">
            <field name="work_entry_source" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
            <field name="work_entry_source" position="after">
                <field name="overtime_from_attendance" invisible="work_entry_source == 'attendance'"/>
            </field>
        </field>
    </record>
</odoo>
