<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_template_view_form" model="ir.ui.view">
        <field name="name">hr.contract.template.view.form.inherit.hr_work_entry_attendance</field>
        <field name="model">hr.version</field>
        <field name="inherit_id" ref="hr.hr_contract_template_form_view"/>
        <field name="arch" type="xml">
            <field name="work_entry_source" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
            <field name="work_entry_source" position="after">
                <field name="overtime_from_attendance" invisible="work_entry_source == 'attendance'"/>
            </field>
        </field>
    </record>
</odoo>
