        <record id="balance_sheet_12560_account" model="account.account.tag">
            <field name="name">Current financial investments - Other investments</field>
            <field name="name@es">Inversiones financieras a corto plazo - Otras inversiones</field>
            <field name="applicability">accounts</field>
        </record>

        <record id="balance_sheet_31600_account" model="account.account.tag">
            <field name="name">Non-current trade payables</field>
            <field name="name@es">Acreedores comerciales no corrientes</field>
            <field name="applicability">accounts</field>
        </record>

    </data>
</odoo>
