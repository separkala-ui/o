<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-inherit="website_sale.ProductsListPageOption" t-inherit-mode="extension">
    <xpath expr="//BuilderRow[BuilderCheckbox[@id=&quot;'o_wsale_tags_filter_opt'&quot;]]" position="after">
        <BuilderRow label.translate="Rental Date" level="1">
            <BuilderCheckbox actionParam="{views: ['website_sale_renting.shop_rental_datepicker_opt']}"/>
        </BuilderRow>
    </xpath>

    <xpath expr="//BuilderCheckbox[@id=&quot;'collapsible_sidebar'&quot;]" position="before">
        <t t-set="CollapsibleSidebarViews" t-value="[...CollapsibleSidebarViews, 'website_sale_renting.products_collapsible']"/>
    </xpath>
</t>

</templates>
