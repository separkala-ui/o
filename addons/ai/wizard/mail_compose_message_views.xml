<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_compose_message_wizard_form" model="ir.ui.view">
            <field name="name">mail.compose.message.form.inherit</field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//footer/field[@name='template_id']" position="after">
                    <field name="body" widget="mail_composer_chatgpt" invisible="not can_edit_body"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
