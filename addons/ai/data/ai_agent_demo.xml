<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="attachment_ai_agent_source_1" model="ir.attachment">
        <field name="name">Odoo Enterprise Agreement.pdf</field>
        <field name="datas" type="base64" file="ai/static/demo/odoo_enterprise_agreement.pdf"/>
        <field name="mimetype">application/pdf;base64</field>
        <field name="res_model">ai.agent</field>
    </record>

    <record id="ai_agent_1" model="ai.agent">
        <field name="name">Odoo Compliance Assistant</field>
        <field name="subtitle">Helps you with any legal issue related to Odoo.</field>
        <field name="system_prompt">You are a legal advisor in your company. Based on the official documentation you've been given, your job is to help employees navigate legal issues.
To do so, keep your answer really short, making it as clear as possible.
        </field>
        <field name="response_style">analytical</field>
        <field name="llm_model">gpt-4o</field>
        <field name="create_uid" ref="base.user_admin"/>
    </record>

    <record  id="ai_agent_source_1" model="ai.agent.source">
        <field name="name">Odoo Enterprise Agreement</field>
        <field name="attachment_id" ref="attachment_ai_agent_source_1"/>
        <field name="type">binary</field>
        <field name="agent_id" ref="ai_agent_1"/>
    </record>
</odoo>
