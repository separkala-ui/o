<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rental_order_form_view" model="ir.ui.view">
        <field name="name">rental.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_renting.rental_order_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list" position="inside">
                <field name="planning_slot_ids" column_invisible="1"/> <!-- Needed to write on that field thanks to the context -->
            </xpath>
            <xpath expr="//field[@name='order_line']/kanban" position="inside">
                <field name="planning_slot_ids" invisible="1"/> <!-- Needed to write on that field thanks to the context -->
            </xpath>
        </field>
    </record>
</odoo>
