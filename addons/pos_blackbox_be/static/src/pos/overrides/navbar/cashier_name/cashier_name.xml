<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_blackbox_be.CashierName" t-inherit="point_of_sale.CashierName" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('cashier-name')]" position="attributes">
            <attribute name="class">cashier-name btn btn-light position-relative p-1</attribute>
        </xpath>
        <xpath expr="//button[hasclass('cashier-name')]" position="inside">
            <t t-if="pos.useBlackBoxBe()">
                <i t-att-class="'pe-auto rounded-circle position-absolute border border-light bg-' + (pos.userSessionStatus ? 'success' : 'danger')"
                   style="padding: 6px; bottom: 1px; right: 1px; cursor: auto;"
                   t-att-title="pos.userSessionStatus ? 'Clocked in' : 'Clocked out'">
                </i>
            </t>
        </xpath>
    </t>
</templates>
