<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductScreen" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('pay-button')]" position="attributes">
            <attribute name="t-att-disabled">this.pos.waitBeforePayment</attribute>
        </xpath>
        <xpath expr="//button[hasclass('pay-small')]" position="attributes">
            <attribute name="t-att-disabled" add="this.pos.waitBeforePayment" separator=" or "/>
        </xpath>
    </t>
</templates>
