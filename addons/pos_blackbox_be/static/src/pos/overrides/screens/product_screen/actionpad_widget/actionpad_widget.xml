<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ActionpadWidget" t-inherit="point_of_sale.ActionpadWidget" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('pay-order-button')]" position="attributes">
            <attribute name="t-att-disabled">this.pos.waitBeforePayment</attribute>
        </xpath>
        <xpath expr="//button[hasclass('pay-order-button-restaurant')]" position="attributes">
            <attribute name="t-att-disabled">this.pos.waitBeforePayment</attribute>
        </xpath>
    </t>
</templates>
