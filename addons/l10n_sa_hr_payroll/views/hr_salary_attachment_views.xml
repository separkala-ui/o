<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="hr_salary_attachment_view_form" model="ir.ui.view">
        <field name="name">hr.salary.attachment.form.inherit.l10_sa_hr_payroll</field>
        <field name="model">hr.salary.attachment</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_attachment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" postion="inside">
                <button name="action_create_loan_payslip" type="object" string="Create Loan Payslip"
                        invisible="state != 'open' or other_input_type_code != 'LOAN_DEDUCTION' or payslip_count"/>
            </xpath>
        </field>
    </record>
</odoo>
