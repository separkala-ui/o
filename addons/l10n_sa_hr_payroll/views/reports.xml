<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="action_report_advance_and_loan" model="ir.actions.report">
        <field name="name">Payslip Salary Advance and Loan</field>
        <field name="model">hr.payslip</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">l10n_sa_hr_payroll.report_advance_and_loan_lang</field>
        <field name="report_file">l10n_sa_hr_payroll.report_advance_and_loan_lang</field>
        <field name="print_report_name">'Salary Advance and Loan - %s - %s %s' % (object.employee_id.legal_name, object.date_from.strftime('%B'), object.date_from.strftime('%Y'))</field>
        <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
