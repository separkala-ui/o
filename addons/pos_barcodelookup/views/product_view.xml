<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_view_form_normalized_pos_barcodelookup" model="ir.ui.view">
        <field name="name">product.product.view.form.normalized.pos.barcodelookup.inherit</field>
        <field name="model">product.product</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="product.product_product_view_form_normalized"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="widget">productScanner</attribute>
            </xpath>
        </field>
    </record>

    <record id="product_template_view_form_normalized_pos_barcodelookup" model="ir.ui.view">
        <field name="name">product.template.view.form.normalized</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="point_of_sale.product_template_view_form_normalized_pos"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="attributes">
                <attribute name="widget">productScanner</attribute>
            </xpath>
        </field>
    </record>

    <record id="point_of_sale.product_template_action_add_pos" model="ir.actions.act_window">
        <field name="view_id" ref="pos_barcodelookup.product_template_view_form_normalized_pos_barcodelookup"/>
    </record>
    <record id="point_of_sale.product_template_action_edit_pos" model="ir.actions.act_window">
        <field name="view_id" ref="pos_barcodelookup.product_template_view_form_normalized_pos_barcodelookup"/>
    </record>
</odoo>
