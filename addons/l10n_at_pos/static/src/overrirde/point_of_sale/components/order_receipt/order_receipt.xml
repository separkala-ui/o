<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="l10n_at_pos.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('before-footer')]" position="inside">
            <div t-if="order.l10n_at_pos_order_receipt_qr_data" class="d-flex justify-content-center">
                <img t-attf-src="data:image/png;base64,{{order.l10n_at_pos_order_receipt_qr_data}}" alt="QR Code" class="w-50"/>
            </div>
        </xpath>
    </t>
</templates>
