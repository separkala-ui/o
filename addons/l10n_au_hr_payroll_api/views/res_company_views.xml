<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_company_view_form" model="ir.ui.view">
        <field name="name">res.company.form.inherit.l10n_au_hr_payroll_api</field>
        <field name="model">res.company</field>
        <field name="priority" eval="51"/>
        <field name="inherit_id" ref="l10n_au.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat'][last()]" position="replace">
                <label for="vat"/>
                <div class="d-flex gap-2">
                    <field name="vat"/>
                    <span class="d-flex gap-2 w-100">
                        <span class="text-success fa fa-check" title="Validation Successful" invisible="not l10n_au_abn_valid or country_code != 'AU'"/>
                        <button class="oe_link oe_inline p-0" type="object" name="action_check_abn" invisible="l10n_au_abn_valid or country_code != 'AU'">Verify ABN</button>
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
