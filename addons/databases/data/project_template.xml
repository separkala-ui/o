<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">
        <record id="stage_new" model="project.task.type">
            <field name="name">New</field>
            <field name="sequence" eval="1"/>
            <field name="user_id" eval="False"/>
        </record>

        <record id="stage_progress" model="project.task.type">
            <field name="name">In Progress</field>
            <field name="sequence" eval="2"/>
            <field name="user_id" eval="False"/>
        </record>

        <record id="stage_done" model="project.task.type">
            <field name="name">Done</field>
            <field name="sequence" eval="3"/>
            <field name="user_id" eval="False"/>
        </record>

        <record id="database_default_template" model="project.project">
            <field name="name">Database Template</field>
            <field name="is_template" eval="True"/>
            <field name="privacy_visibility">followers</field>
            <field name="type_ids" eval="[
                Command.link(ref('stage_new')),
                Command.link(ref('stage_progress')),
                Command.link(ref('stage_done')),
            ]"/>
        </record>

        <function model="ir.config_parameter" name="set_param" eval="('databases.odoocom_project_template', ref('database_default_template'))"/>
    </data>

</odoo>
