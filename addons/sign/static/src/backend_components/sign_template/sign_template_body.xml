<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="sign.SignTemplateBody">
        <SignSaveTemplateDialog
            isShown="this.state.documentUsedTimesCounter > 2"
            documentUsedTimesCounter="this.state.documentUsedTimesCounter"
            onTemplateSaveClick.bind="this.props.onTemplateSaveClick"
        />
        <iframe class="o_iframe o_sign_pdf_iframe" t-ref="PDFIframe" t-att-src="PDFViewerURL" t-att-disabled="props.hasSignRequests"/>
    </t>
</templates>
