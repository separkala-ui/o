<?xml version="1.0"?>
<odoo>
    <record id="view_hr_referral_reward_backend_kanban" model="ir.ui.view">
        <field name="name">hr.referral.reward.employee.referral.backend.kanban</field>
        <field name="model">hr.referral.reward</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="id"/>
                <field name="name"/>
                <field name="cost"/>
                <field name="awarded_employees"/>
                <field name="description"/>
                <templates>
                    <t t-name="card" class="flex-row">
                        <main>
                            <field name="name" class="fw-bolder fs-5"/>
                            <span><field name="cost"/> Points</span>
                            <span><field name="awarded_employees"/> Awarded Employees</span>
                            <field name="description" class="fst-italic text-muted"/>
                        </main>
                        <aside>
                            <field
                                name="image"
                                widget="image"
                                alt="Reward"
                                options="{'img_class': 'object-fit-contain'}"
                                invisible="not image"
                            />
                            <field name="gift_manager_id" widget="referral_many2one_avatar_user"/>
                        </aside>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_hr_referral_reward_kanban" model="ir.ui.view">
        <field name="name">hr.referral.reward.employee.referral.kanban</field>
        <field name="model">hr.referral.reward</field>
        <field name="arch" type="xml">
            <kanban can_open="0" js_class="referral_kanban">
                <field name="points_missing"/>
                <templates>
                    <t t-name="card">
                        <main>
                            <div class="d-flex">
                                <field name="name" class="fw-bolder fs-5 flex-grow-1"/>
                                <div t-attf-class="o_kanban_referral_top_right bg-view fw-bold #{(record.points_missing.raw_value &lt; 1) ? '' : 'text-danger'}">
                                    <img src="/hr_referral/static/src/img/points.svg" class="me-2" height="20px" alt="Point icon"/>
                                    <field name="cost" class="me-1"/>Points
                                </div>
                            </div>
                            <div class="ratio ratio-16x9 overflow-hidden mb-3">
                                <div class="embed-responsive-item d-flex align-items-center">
                                    <field name="image" widget="image" class="w-100" alt="Product" options="{'img_class': 'w-100'}"/>
                                </div>
                            </div>
                            <field name="description"/>
                            <div class="flex mb-2">
                                <field name="company_id" class="fst-italic mb-2" groups="base.group_multi_company"/>
                                <field name="gift_manager_id" widget="many2one_avatar_user" class="float-end"/>
                            </div>
                            <div class="w-100">
                                <t t-if="record.points_missing.raw_value &lt; 1">
                                    <button name="buy" type="object" class="btn btn-primary w-100 d-none d-md-inline-block" confirm="Do you want to confirm this reward? After confirmation an HR will contact you.">
                                        <span title='Buy'><i class='fa fa-shopping-basket me-3' role="img" aria-label="Buy"/>Buy</span>
                                    </button>
                                    <button name="action_open_buy_view" type="object" class="btn btn-primary w-100 d-inline-block d-md-none">
                                        <span title='Buy'><i class='fa fa-shopping-basket me-3' role="img" aria-label="Buy"/>Buy</span>
                                    </button>
                                </t>
                                <t t-else="">
                                    <div role="alertdialog" class="alert text-center alert-danger pt-2 pb-1">
                                        You need another
                                        <field name="points_missing"/>
                                        Points to buy this
                                    </div>
                                </t>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hr_referral_view_form_reward_purchase_dialog" model="ir.ui.view">
        <field name="name">hr.referral.reward.buy.form</field>
        <field name="model">hr.referral.reward</field>
        <field name="arch" type="xml">
            <form class="p-0 m-0">
                <field name="description" invisible="1"/>
                <sheet>
                    <div class="d-flex">
                        <field name="name" class="fw-bolder fs-5 flex-grow-1" readonly="1"/>
                        <div t-attf-class="o_kanban_referral_top_right bg-view fw-bold">
                            <img src="/hr_referral/static/src/img/points.svg" class="me-2" height="20px" alt="Point icon"/>
                            <field name="cost" class="me-1" readonly="1"/>Points
                        </div>
                    </div>
                    <field name="image" widget="image" class="w-100" alt="reward" options="{'img_class': 'w-100'}" readonly="1"/>
                    <h4>Do you want to confirm this reward? After confirmation an HR will contact you.</h4>
                </sheet>
                <footer>
                    <button string="Ok" type="object" name="buy" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" special="cancel" data-hotkey="x" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_referral_reward_form">
        <field name="name">hr.referral.reward.form</field>
        <field name="model">hr.referral.reward</field>
        <field name="arch" type="xml">
            <form>
                <field name="active" invisible="1"/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_get_employee_awarded" class="oe_stat_button" icon="fa-user"
                            type="object" invisible="awarded_employees == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="awarded_employees"/> Employees
                                </span>
                                <span class="o_stat_text">
                                    Awarded
                                </span>
                            </div>
                        </button>
                    </div>

                    <field name="image" widget='image' class="oe_avatar" nolabel="1" readonly="not is_gift_manager"/>
                    <group>
                        <group name="main_details">
                            <field name="name" readonly="not is_gift_manager"/>
                            <label for="cost" string="Cost"/>
                            <div>
                                <field name="cost" nolabel="1" class="w-25" readonly="not is_gift_manager"/>
                                <span class="ml8">Points</span>
                            </div>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" readonly="not is_gift_manager"/>
                            <field name="gift_manager_id" options="{'no_create': True}" readonly="not is_gift_manager"/>
                        </group>
                        <group name="image" />
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" widget="html" nolabel="1" readonly="not is_gift_manager"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hr_referral_reward_tree">
        <field name="name">hr.referral.reward.list</field>
        <field name="model">hr.referral.reward</field>
        <field name="arch" type="xml">
            <list sample="1">
                <field name="sequence" widget="handle" readonly="not is_gift_manager"/>
                <field name="name" readonly="not is_gift_manager"/>
                <field name="cost" readonly="not is_gift_manager"/>
                <field name="gift_manager_id"/>
                <field name="activity_ids" widget="list_activity" optional="show" readonly="not is_gift_manager"/>
                <field name="awarded_employees" readonly="not is_gift_manager"/>
                <field name="company_id" groups="base.group_multi_company" readonly="not is_gift_manager"/>
            </list>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_hr_referral_reward_configuration">
        <field name="name">Rewards</field>
        <field name="res_model">hr.referral.reward</field>
        <field name="view_mode">list,kanban,form,activity</field>
        <field name="group_ids" eval="[Command.link(ref('hr_referral.group_hr_referral_manager'))]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Let's create Super Rewards to thank your employees.
            </p>
        </field>
    </record>

    <record id="action_hr_referral_reward_configuration_view_tree" model="ir.actions.act_window.view">
        <field eval="10" name="sequence"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_hr_referral_reward_tree"/>
        <field name="act_window_id" ref="action_hr_referral_reward_configuration"/>
    </record>

    <record id="action_hr_referral_reward_configuration_view_form" model="ir.actions.act_window.view">
        <field eval="20" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_hr_referral_reward_form"/>
        <field name="act_window_id" ref="action_hr_referral_reward_configuration"/>
    </record>

    <record model="ir.actions.act_window" id="action_hr_referral_reward">
        <field name="name">Rewards</field>
        <field name="res_model">hr.referral.reward</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="hr_referral.view_hr_referral_reward_kanban"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_referral_kanban">
                Let's create super Rewards to thank<br/>your employees.
            </p>
        </field>
    </record>

    <menuitem parent="menu_hr_referral_configuration" id="menu_hr_referral_reward_configuration" action="action_hr_referral_reward_configuration" sequence="3"/>


</odoo>
