<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="res.groups.privilege" id="res_groups_privilege_iot">
        <field name="name">IoT</field>
        <field name="description">Configure IoT boxes and devices.</field>
        <field name="sequence">22</field>
        <field name="category_id" ref="base.module_category_productivity"/>
    </record>

    <record id="group_iot_user" model="res.groups">
        <field name="name">User</field>
        <field name="privilege_id" ref="res_groups_privilege_iot"/>
    </record>
    <record id="group_iot_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="privilege_id" ref="res_groups_privilege_iot"/>
        <field name="implied_ids" eval="[(4, ref('group_iot_user'))]"/>
        <field name="user_ids" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="iot_box_comp_rule" model="ir.rule">
            <field name="name">IoT Box multi company rule</field>
            <field name="model_id" ref="model_iot_box"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>

        <record id="iot_device_comp_rule" model="ir.rule">
            <field name="name">IoT Device multi company rule</field>
            <field name="model_id" ref="model_iot_device"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>
    </data>

</odoo>
