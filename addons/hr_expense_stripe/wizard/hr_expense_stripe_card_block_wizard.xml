<odoo>
    <data>
        <record id="hr_expense_stripe_card_block_wizard_form" model="ir.ui.view">
            <field name="name">hr.expense.stripe.card.block.wizard.form</field>
            <field name="model">hr.expense.stripe.card.block.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="cancellation_reason"/>
                            <field name="other_reason_text" invisible="cancellation_reason != 'none'"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_block_card" class="btn btn-primary" type="object">Block</button>
                        <button string="Cancel" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
