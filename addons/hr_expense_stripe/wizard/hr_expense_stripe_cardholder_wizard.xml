<odoo>
    <data>
        <record id="hr_expense_stripe_cardholder_wizard_form" model="ir.ui.view">
            <field name="name">hr.expense.stripe.cardholder.wizard.form</field>
            <field name="model">hr.expense.stripe.cardholder.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="employee_id" options="{'no_open': True}"/>
                            <field name="firstname" required="1"/>
                            <field name="lastname" required="1"/>
                            <field name="birthday" required="1"/>
                        </group>
                        <group>
                            <field name="phone_number" required="1"/>
                            <field name="email" required="1"/>
                            <field name="billing_street" required="1"/>
                            <field name="billing_street2" />
                            <field name="billing_city" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="billing_state_id" required="company_country_id.code == 'US'"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="billing_zip" required="1"/>
                            <field name="billing_country_id" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_save_cardholder" class="btn btn-primary" type="object">Save</button>
                        <button string="Cancel" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
