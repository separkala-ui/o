<odoo>
    <data>
        <record id="account_journal_form_inherit_expense_stripe" model="ir.ui.view">
            <field name="name">account.journal.inherit.expense.stripe.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_open_stripe_issuing_cards" type="object" class="oe_stat_button"
                            icon="fa-credit-card-alt" invisible="not stripe_card_ids">
                        <div class="o_stat_info ps-2">
                            <field name="nb_stripe_card" class="o_stat_value"/>
                            <span class="o_stat_text">Cards</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//field[@name='outbound_payment_method_line_ids']/list/field[@name='name']" position="before">
                    <field name="employee_id" optional="hide" widget="many2one_avatar_employee"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
