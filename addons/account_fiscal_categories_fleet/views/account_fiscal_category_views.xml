<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_account_fiscal_category_form" model="ir.ui.view">
        <field name="name">account.fiscal.category.form</field>
        <field name="model">account.fiscal.category</field>
        <field name="inherit_id" ref="account_fiscal_categories.view_account_fiscal_category_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='left_column']" position="after">
                <group name="right_column">
                    <field name='car_category'/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_account_fiscal_category_tree" model="ir.ui.view">
        <field name="name">account.fiscal.category.list</field>
        <field name="model">account.fiscal.category</field>
        <field name="inherit_id" ref="account_fiscal_categories.view_account_fiscal_category_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_ids']" position="after">
                <field name="car_category" optional="hide" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
