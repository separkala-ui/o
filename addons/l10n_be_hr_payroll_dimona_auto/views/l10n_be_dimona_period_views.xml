<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_be_dimona_period_view_form" model="ir.ui.view">
        <field name="name">l10n.be.dimona.period.form</field>
        <field name="model">l10n.be.dimona.period</field>
        <field name="arch" type="xml">
            <form string="Dimona Period">
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_declarations"
                            class="oe_stat_button"
                            icon="fa-address-book"
                            type="object"
                            invisible="not declaration_count">
                            <div class="o_stat_info">
                                Dimona Declarations
                                <span class="o_stat_value">
                                    <field name="declaration_count"/>
                                </span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="content" groups="base.group_no_one"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="employee_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_be_dimona_period_view_tree" model="ir.ui.view">
        <field name="name">l10n.be.dimona.period.tree</field>
        <field name="model">l10n.be.dimona.period</field>
        <field name="arch" type="xml">
            <list string="Dimona Periods">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="employee_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="relation_id"/>
                <field name="declaration_ids"/>
            </list>
        </field>
    </record>

    <record id="l10n_be_dimona_period_view_search" model="ir.ui.view">
        <field name="name">l10n.be.dimona.period.search</field>
        <field name="model">l10n.be.dimona.period</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <field name="employee_id"/>
            </search>
        </field>
    </record>

    <record id="l10n_be_dimona_period_action" model="ir.actions.act_window">
        <field name="name">Dimona Periods</field>
        <field name="res_model">l10n.be.dimona.period</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <menuitem
        id="menu_l10n_be_dimona_period"
        name="Dimona Periods"
        action="l10n_be_dimona_period_action"
        parent="l10n_be_hr_payroll.menu_reporting_l10n_be"
        sequence="505"/>
</odoo>
