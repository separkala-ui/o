<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_urban_piper.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-receipt')]//div[hasclass('before-footer')]" position="inside">
            <div class="text-center pt-3" t-if="props.order.delivery_identifier">
                <div class="fw-bolder">Delivery Address</div>
                <div t-if="props.order.partner_id.street" t-esc="props.order.partner_id.street"/>
                <div t-if="props.order.partner_id.street2" t-esc="props.order.partner_id.street2"/>
                <div>
                    <span t-if="props.order.partner_id.city"><t t-esc="props.order.partner_id.city"/> </span>
                    <span t-if="props.order.partner_id.state_id"><t t-esc="props.order.partner_id.state_id.name"/> </span>
                    <span t-if="props.order.partner_id.zip" t-esc="props.order.partner_id.zip"/>
                </div>
            </div>
        </xpath>
    </t>

</templates>
