<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_urban_piper.OrderChangeReceipt" t-inherit="point_of_sale.OrderChangeReceipt" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('receipt-header')]//div[hasclass('pos-receipt-title')]" position="after">
            <div class="pos-receipt-title" t-if="data.delivery_provider_id">
                Delivery/Online
            </div>
        </xpath>
        <xpath expr="//div[hasclass('receipt-header')]//div[hasclass('preset-name')]" position="attributes">
            <attribute name="t-if">!data.delivery_provider_id</attribute>
        </xpath>
        <xpath expr="//div[hasclass('receipt-header')]//div[hasclass('o-employee-name')]" position="after">
            <div t-if="data.delivery_provider_id">
                <span class="fw-bolder" t-out="data.delivery_provider_id.name"/> #<t t-out="data.order_otp"/>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('pos-receipt-body')]" position="after">
                <div t-if="data.delivery_provider_id and data.changes.title !== 'CANCELLED'" class="fs-2 fst-italic">
                    <span>Preparation Time: <t t-out="data.prep_time"/> Min</span>
                </div>
        </xpath>
    </t>

</templates>
