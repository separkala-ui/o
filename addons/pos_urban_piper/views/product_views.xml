<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_only_form_view_inherit_pos_urban_piper" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.pos_urban_piper</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='public_description']" position="after">
                <group name="pos_urban_piper" string="Urban Piper">
                    <field name="urbanpiper_pos_config_ids" options="{'no_create': True}" groups="point_of_sale.group_pos_user" widget="many2many_tags" placeholder="Not available for online orders."/>
                    <field name="urbanpiper_meal_type" groups="point_of_sale.group_pos_user"/>
                    <field name="is_recommended_on_urbanpiper" widget="boolean_toggle"
                    groups="point_of_sale.group_pos_user"/>
                    <field name="is_alcoholic_on_urbanpiper" widget="boolean_toggle"
                    groups="point_of_sale.group_pos_user"/>
                    <field name="urbanpiper_pos_platform_ids" groups="point_of_sale.group_pos_user" widget="many2many_tags" placeholder="Not available on any platforms."/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_template_tree_view_pos_urban_piper" model="ir.ui.view">
        <field name="name">product.template.product.list.inherit.pos.urban.piper</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <field name="available_in_pos" position="after">
                <field name="urbanpiper_pos_config_ids" options="{'no_create': True}" widget="many2many_tags" groups="point_of_sale.group_pos_user" optional="hide"/>
                <field name="urbanpiper_meal_type" groups="point_of_sale.group_pos_user" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="product_template_search_view_inherit_pos_urban_piper" model="ir.ui.view">
        <field name="name">product.template.search.view.inherit.pos.urban.piper</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <filter name="pos_categ_ids" position="after">
                <filter string="Food Delivery Location" name="group_by_urbanpiper_pos_config_ids" context="{'group_by':'urbanpiper_pos_config_ids'}"/>
            </filter>
        </field>
    </record>
</odoo>
