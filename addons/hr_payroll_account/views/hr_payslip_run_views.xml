<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_view_kanban" model="ir.ui.view">
        <field name="name">hr.payslip.run.inherit.kanban</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_view_kanban"/>
        <field name="arch" type="xml">
            <t t-name='menu' position="inside">
                <button name="action_open_move" class="oe_stat_button" icon="fa-dollar"
                        type="object" help="Generated Journal Entries" invisible="not move_id"
                        groups="account.group_account_readonly" options="{'is_smart_button': 1}">
                    <div class="o_stat_info">
                        <span class="o_stat_text">
                            Journal Entry <br/>
                            <t invisible="move_state != 'draft'">(Draft)</t>
                            <t invisible="move_state != 'posted'">(Posted)</t>
                            <t invisible="move_state != 'cancel'">(Canceled)</t>
                        </span>
                    </div>
                </button>
            </t>
            <button name='action_validate' position="replace">
                <button name="action_validate" type="object" string="Create Draft Entry" invisible="state != '01_ready' or empty_payslips or not payslip_count"
                        class="oe_highlight" context="{'payslip_generate_pdf': True}" confirm="Are you sure you want to proceed?"/>
            </button>
        </field>
    </record>
</odoo>
