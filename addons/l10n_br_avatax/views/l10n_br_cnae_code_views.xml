<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_br_cnae_code_view_form" model="ir.ui.view">
        <field name="name">l10n_br.cnae.code.view.form</field>
        <field name="model">l10n_br.cnae.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="name"/>
                        <field name="sanitized_code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="l10n_br_cnae_code_view_list" model="ir.ui.view">
        <field name="name">l10n_br.cnae.code.view.list</field>
        <field name="model">l10n_br.cnae.code</field>
        <field name="arch" type="xml">
            <list>
                <field name="code"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="l10n_br_cnae_code_action" model="ir.actions.act_window">
        <field name="name">CNAE Codes</field>
        <field name="res_model">l10n_br.cnae.code</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="l10n_br_cnae_code_view_list"/>
    </record>

    <menuitem id="l10n_br_cnae_code_menu" name="CNAE Codes" action="l10n_br_cnae_code_action" parent="l10n_br.brazilian_accounting_menu"/>
</odoo>

