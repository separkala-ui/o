<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.l10n.lt.hr.payroll</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='registration_number']" position="after">
                <field name="l10n_lt_working_capacity" invisible="company_country_code != 'LT'"/>
            </xpath>
            <group name="payroll_group" position="inside">
                <group string="Options" invisible="country_code != 'LT'">
                    <label for="l10n_lt_benefits_in_kind"/>
                    <div class="o_row">
                        <field name="l10n_lt_benefits_in_kind" class="o_hr_narrow_field"/>
                        <span>/ month</span>
                    </div>
                    <field name="l10n_lt_time_limited"/>
                    <field name="l10n_lt_pension"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
