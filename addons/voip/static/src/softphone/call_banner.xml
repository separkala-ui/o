<?xml version="1.0"?>
<templates>
<t t-name="voip.CallBanner">
    <div class="d-flex justify-content-between align-items-center w-100 border-bottom border-primary z-3">
        <button class="btn d-flex flex-column w-100" t-on-click="onClickSwitchCall">
            <span t-esc="contactName"/>
            <div class="d-flex align-items-center gap-1">
                <i t-if="isCallOnHold" class="fa fa-pause text-warning fs-6"/>
                <span class="fs-2" t-esc="props.call.timerText"/>
            </div>
        </button>
        <ActionButton
            title.translate="Hang up"
            icon="'fa-phone'"
            type="'danger'"
            extraClass="'rounded-circle p-2'"
            onClick.bind="onClickHangUp"
        />
    </div>
</t>
</templates>
