<?xml version="1.0"?>
<templates>
<t t-name="voip.TransferConfirmation">
    <div class="d-flex flex-column gap-3 flex-grow-1 p-3">
        <div class="d-flex flex-column align-items-center justify-content-center gap-3 flex-grow-1">
            <ContactInfo contact="props.call?.partner_id" phoneNumber="props.call.phone_number"/>
            <i class="oi oi-arrow-down fa-2x"/>
            <ContactInfo contact="props.targetContact" phoneNumber="props.targetPhoneNumber" extraClass="'mt-3'"/>
        </div>
        <div class="btn-group-vertical">
            <button class="btn btn-success btn-lg" title="Direct transfer" t-on-click="onClickDirectTransfer">Direct transfer</button>
            <button class="btn btn-secondary btn-lg" title="Ask First" t-on-click="onClickAskFirst">Ask First</button>
        </div>
        <button class="btn btn-secondary btn-lg" title="Cancel transfer" t-on-click="onClickCancel">Cancel transfer</button>
    </div>
</t>
</templates>
