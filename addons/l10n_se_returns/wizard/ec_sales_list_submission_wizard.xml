<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l10n_se_returns_ec_sales_list_submission_wizard_form" model="ir.ui.view">
            <field name="name">l10n_se_returns.ec.sales.list.submission.wizard.form</field>
            <field name="model">l10n_se_returns.ec.sales.list.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group id="instructions">
                        <ol colspan="2">
                            <li>
                                <div class="d-inline-block align-top">
                                    <span>Download the EC Sales List statement</span><br/>
                                    <button string='Download KVR' name="export_to_kvr" type="object" class="btn-secondary"/>
                                </div>
                            </li>
                            <li>Log in to <a href="https://www.skatteverket.se/" target="_blank">Skatteverket's</a> e-service</li>
                            <li>Upload the KVR file</li>
                            <li>Validate the EC Sales List</li>
                        </ol>
                    </group>
                </field>
            </field>
        </record>
    </data>
</odoo>
