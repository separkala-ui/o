<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="isoc_prepayment_pay_wizard_form" model="ir.ui.view">
        <field name="name">l10n_be_reports.isoc.prepayment.pay.wizard.view.form</field>
        <field name="model">l10n_be_reports.isoc.prepayment.pay.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="3">
                        <group colspan="2">
                            <p>
                                In Belgium, companies that have been operating for 3 years or more are required to pay their 
                                corporate tax in 4 installments throughout the year. For newer companies, this is not mandatory, but it is still recommanded.<br/>
                                <br/>
                                You estimate your annual profit, we then divide the total corporate tax amount into 4 equal installments.
                            </p>
                        </group>
                        <div colspan="1">
                            <field name="qr_code" readonly="1" no_label="1"/>
                        </div>
                    </group>
                    <group>
                        <div class="content-group">
                            <div class="d-flex">
                                <label for="profit_estimate" string="Profit Estimate" class="col-lg-4 o_light_label"/>
                                <div class="content-group">
                                    <field name="profit_estimate" widget="monetary" class="col-lg-3 oe_inline"/>
                                    this year
                                </div>
                            </div>
                            <div class="d-flex">
                                <label for="corporate_tax_rate" class="col-lg-4 o_light_label"/>
                                <div class="content-group">
                                    <field name="corporate_tax_rate"/>
                                </div>
                            </div>
                            <div class="d-flex">
                                <span class="col-lg-4 o_light_label">Prepayment</span>
                                <div class="content-group">
                                    <field name="amount_to_pay" widget="monetary" class="oe_inline"/>
                                    this quarter
                                </div>
                            </div>
                        </div>
                        <group>
                            <field name="currency_id" invisible="1"/> <!-- used as the currency for amount -->
                            <field name="partner_id" readonly="1"/>
                            <field name="acc_number" readonly="1"/>
                            <field name="communication" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_mark_as_paid" string="Mark Paid" type="object" class="btn-primary" data-hotkey="q"/>
                    <button name="action_send_email_instructions" string="Send" type="object" class="btn-secondary" data-hotkey="s"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
