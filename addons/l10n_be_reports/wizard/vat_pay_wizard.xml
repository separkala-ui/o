<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vat_pay_wizard_form" model="ir.ui.view">
        <field name="name">l10n_be_reports.vat_pay_wizard_view_form</field>
        <field name="model">l10n_be_reports.vat.pay.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="is_recoverable" invisible="1"/>
                <group>
                    <group>
                        <field name="currency_id" invisible="1"/> <!-- used as the currency for amount -->
                        <field name="partner_id" readonly="1"/>
                        <field name="amount_to_pay" widget="monetary" readonly="1"/>
                        <field name="acc_number" readonly="1"/>
                        <field name="communication" readonly="1"/>
                    </group>
                    <group>
                        <div colspan="2">
                            <field name="qr_code" readonly="1" no_label="1"/>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="action_mark_as_paid" string="Mark as Recovered" type="object" class="btn-primary" data-hotkey="q" invisible="not is_recoverable"/>
                    <button name="action_mark_as_paid" string="Mark Paid" type="object" class="btn-primary" data-hotkey="q" invisible="is_recoverable"/>
                    <button name="action_send_email_instructions" string="Send" type="object" class="btn-secondary" data-hotkey="s" invisible="is_recoverable"/>
                    <button string="Discard" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
