<odoo>
    <record id="l10n_ro_trial_balance_4_column" model="account.report">
        <field name="name">Trial Balance (4 columns)</field>
        <field name="name@ro">Balanța de verificare (4 coloane)</field>
        <field name="root_report_id" ref="account_reports.trial_balance_report"/>
        <field name="custom_handler_model_id" ref="model_l10n_ro_trial_balance_4_column_report_handler"/>
        <field name="country_id" ref="base.ro"/>
        <field name="column_ids">
            <record id="l10n_trial_balance_4_column_report_debit" model="account.report.column">
