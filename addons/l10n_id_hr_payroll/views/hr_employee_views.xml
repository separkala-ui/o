<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="l10n_id_action_view_historical_lines" type="object" groups="hr_payroll.group_hr_payroll_user" string="View GROSS/PPH21 History" invisible="country_code != 'ID'"/>
            </xpath>
            <group name="payroll_group" position="inside">
                <group string="Indonesian Payroll" invisible="company_country_code != 'ID'">
                    <field name="l10n_id_kode_ptkp" class="o_hr_narrow_field"/>
                    <field name="l10n_id_bpjs_jkk" widget="percentage" class="o_hr_percentage_narrow_field"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
