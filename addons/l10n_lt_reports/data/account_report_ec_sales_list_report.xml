<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- display ec sales list report menu item -->
        <record model="ir.ui.menu" id="account_reports.menu_action_account_report_sales">
            <field name="active" eval="True"/>
        </record>

    <!-- Add the report variant -->
        <record id="lithuanian_ec_sales_report" model="account.report">
            <field name="name">EC sales Report (FR0564)</field>
            <field name="country_id" ref="base.lt"/>
            <field name="root_report_id" ref="account_reports.generic_ec_sales_report"/>
            <field name="load_more_limit" eval="80"/>
            <field name="filter_journals" eval="True"/>
            <field name="custom_handler_model_id" ref="model_l10n_lt_ec_sales_report_handler"/>
            <field name="search_bar" eval="True"/>
            <field name="column_ids">
                <record id="account_financial_report_ec_sales_country" model="account.report.column">
                    <field name="name">Country Code</field>
                    <field name="expression_label">country_code</field>
                    <field name="figure_type">string</field>
                    <field name="sortable" eval="True"/>
                </record>
                <record id="account_financial_report_ec_sales_vat" model="account.report.column">
                    <field name="name">VAT Number</field>
                    <field name="expression_label">vat_number</field>
                    <field name="figure_type">string</field>
                    <field name="sortable" eval="True"/>
                </record>
                <record id="account_financial_report_ec_sales_goods_value" model="account.report.column">
                    <field name="name">Value of the goods</field>
                    <field name="expression_label">goods</field>
                    <field name="figure_type">monetary</field>
                    <field name="sortable" eval="True"/>
                </record>
                <record id="account_financial_report_ec_sales_triangular_goods_value" model="account.report.column">
                    <field name="name">Value of the goods (triangular trade)</field>
                    <field name="expression_label">triangular</field>
                    <field name="figure_type">monetary</field>
                    <field name="sortable" eval="True"/>
                </record>
                <record id="account_financial_report_ec_sales_service_value" model="account.report.column">
                    <field name="name">Value of the services</field>
                    <field name="expression_label">services</field>
                    <field name="figure_type">monetary</field>
                    <field name="sortable" eval="True"/>
                </record>
            </field>
        </record>
    </data>
</odoo>
