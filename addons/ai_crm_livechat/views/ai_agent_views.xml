<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ai_agent_view_form" model="ir.ui.view">
        <field name="name">ai.agent.view.form.inherit.crm_livechat</field>
        <field name="model">ai.agent</field>
        <field name="inherit_id" ref="ai_app.ai_agent_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_leads" type="object" class="oe_stat_button" icon="fa-star"
                    invisible="not created_leads_count">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Leads</span>
                        <field name="created_leads_count" class="o_stat_value"/>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
