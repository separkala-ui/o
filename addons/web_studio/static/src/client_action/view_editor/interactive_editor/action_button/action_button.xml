<templates>
	<t t-name="web_studio.AddButtonAction">
		<button class="o-web-studio-editor--add-button-action btn btn-link" t-on-click="onClick">
			Add a button
		</button>
	</t>

	<t t-name="web_studio.SelectionHeaderButtons">
		<div class="d-flex justify-content-between m-2">
			<div class="d-flex align-items-center align-content-around flex-wrap gap-1">
				<t t-foreach="buttons" t-as="button" t-key="button.id">
					<button
						t-attf-class="btn o-web-studio-editor--element-clickable {{getClassName(button)}}"
						t-att-studioxpath="button.studioXpath"
						t-att-data-studio-xpath="button.studioXpath"
						t-att-data-tooltip-template="this.env.debug ? 'views.ViewButtonTooltip' : false"
						t-att-data-tooltip-info="this.env.debug ? makeTooltipButton(button) : false"
						t-att-data-tooltip="button.title"
						data-tooltip-delay="1000"
						t-on-click="() => this.env.config.onNodeClicked(button.studioXpath)"
						t-esc="button.string"
					/>
				</t>
				<AddButtonAction/>
			</div>
		</div>
	</t>
</templates>
