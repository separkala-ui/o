<templates>

<t t-name="web_studio.ReportEditor.ReportRecordNavigation">
    <div class="d-flex flex-row gap-3 flex-wrap" style="height: 35px;">
        <div class="position-relative rounded o-web-studio-report-search-record p-1 px-2 bg-white" style="max-width: 150px;" >
            <i class="fa fa-search position-absolute end-0 me-3 mt-1"/>
            <RecordSelector t-props="multiRecordSelectorProps"/>
        </div>
        <t t-set="printTooltip">
            <t t-if="!reportEditorModel.recordToDisplay">There is no record to preview</t>
        </t>
        <button class="btn border-2 border-black pe-auto"
          t-on-click="printPreview"
          t-att-data-tooltip="printTooltip"
          t-att-disabled="!reportEditorModel.recordToDisplay"
          name="report_print_preview">
            <i t-if="!reportEditorModel.recordToDisplay" class="fa fa-exclamation-triangle me-2" />
            <i t-else="" class="fa fa-print me-2" />
            Print
        </button>
        <div class="d-flex rounded px-3 o-web-studio-report-pager bg-white" >
            <Pager t-props="pagerProps" onUpdate.bind="updatePager"/>
        </div>
    </div>
</t>

</templates>
