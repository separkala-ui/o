<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="documents.DocumentsViews.RightPanel">
        <div t-if="state.visible"
            class="o_document_chatter_container o-mail-ChatterContainer"
            t-att-class="{'mt-2': isMobile, 'h-100 o-aside': !isMobile, 'd-flex flex-column' : !panelDisabled}"
            t-ref="chatterContainer"
        >
            <t t-if="panelDisabled" t-call="documents.DocumentsViews.ChatterOverlay"/>
            <DocumentsDetailsPanel t-if="!panelDisabled" record="state.previewedDocument?.record || state.focusedRecord" nbViewItems="props.nbViewItems" />
            <Chatter t-if="state.focusedRecord?.data and documentService.userIsInternal"
                threadId="typeof state.focusedRecord.data.id === 'number' and state.focusedRecord.data.id"
                threadModel="'documents.document'"
                isChatterAside="!isMobile"/>
        </div>
    </t>
</templates>
