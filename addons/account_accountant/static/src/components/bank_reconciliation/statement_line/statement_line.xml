<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="account_accountant.BankRecStatementLine" t-inherit="web.KanbanRecord" t-inherit-mode="primary">
        <xpath expr="//article" position="replace">
            <article
                    t-att-class="getRecordClasses()"
                    t-att-data-id="record.id"
                    t-att-tabindex="record.model.useSampleModel ? -1 : 0"
                    t-custom-click="onGlobalClick"
                    t-on-touchstart="onTouchStart"
                    t-on-touchmove="onTouchMoveOrCancel"
                    t-on-touchcancel="onTouchMoveOrCancel"
                    t-on-touchend="onTouchEnd"
                    t-ref="root">
                <div name="bank_statement_line" class="o_statement_line w-100 p-2" t-on-click="toggleUnfold" t-att-class="{'o_selected_statement_line': isSelected}">
                    <button t-if="!recordData.statement_id" type="button" class="o_statement_btn d-none d-md-block position-absolute top-0 end-0 btn btn-sm btn-secondary" t-on-click.stop="openStatementCreate">
                        Statement
                    </button>
                    <div class="o_grid_container">
                        <div class="o_row">
                            <div class="d-flex gap-3">
                                <div t-att-data-tooltip="formattedFullDate">
                                    <t t-esc="formattedDate"/>
                                </div>
                                <div t-on-click.stop="openChatter" t-if="!ui.isSmall" class="o_chatter_icon btn-link text-action" t-att-class="{'visible': activityNumber or hasAttachment}">
                                    <div t-if="activityNumber" class="activity-container position-relative">
                                        <i class="fa fa-lg fa-fw fa-clock-o" role="img" aria-label="Activities"/>
                                        <span class="activity-badge badge rounded-pill" t-esc="activityNumber"/>
                                    </div>
                                    <i t-elif="hasAttachment"
                                       class="fa fa-lg fa-fw fa-paperclip"
                                       role="img"
                                       aria-label="Attachment"
                                    />
                                    <i t-elif="!isChatterOpen"
                                       class="fa fa-lg fa-fw fa-comments-o"
                                       role="img"
                                       aria-label="Journal Entry"
                                    />
                                </div>
                            </div>
                            <div class="o_payment_ref user-select-text d-none d-md-block" t-att-class="isUnfolded ? 'overflow-wrap' : 'text-truncate'">
                                <h7 class="d-inline" t-esc="recordData.payment_ref"/>
                            </div>
                            <div name="statement_line_partner_name" class="text-truncate text-muted">
                                <t t-if="isUnfolded and recordData?.partner_name">
                                    <span t-esc="recordData.partner_name"/>
                                </t>
                                <t t-else="">
                                    <span t-esc="partner?.display_name or recordData.partner_name" t-att-class="{'text-muted': !partner and recordData.partner_name}"/>
                                </t>
                            </div>
                            <!-- Only available on large screen -->
                            <div class="o_top_button_line d-none d-md-flex align-items-start text-truncate">
                                <BankRecButtonList t-props="buttonListProps" isTopLine="true" suspenseAccountLine="suspenseAccountLine" t-if="!recordData.is_reconciled or (userCanReview and !recordData.checked)"/>
                                <span class="badge rounded-pill py-1 ps-1 text-success bg-success-subtle" t-att-class="{ 'pe-1': !isUnfolded }" t-if="recordData.is_reconciled">
                                    <i class="fa fa-check"/>
                                    <span t-if="isUnfolded" class="ms-1">
                                        Reconciled
                                    </span>
                                </span>
                                <span name="reconciled_line_name" class="text-start text-truncate text-muted" t-esc="reconciledLineName" t-if="!isUnfolded"/>
                            </div>
                            <div class="d-flex align-items-start justify-content-between">
                                <span class="text-muted w-50 text-end text-nowrap" t-if="recordData.foreign_currency_id">
                                    <t t-esc="formattedAmountCurrencyInForeign"/>
                                </span>
                                <span t-att-class="amountClasses" class="text-end text-nowrap" t-esc="formattedAmount"/>
                            </div>
                            <div class="d-none d-md-block text-end">
                                <i class="oi" t-att-class="{'oi-chevron-up': isUnfolded, 'oi-chevron-down': !isUnfolded}"/>
                            </div>
                        </div>

                        <!-- Only available on small screen -->
                        <div class="o_row d-md-none">
                            <span class="text-truncate o_payment_ref" t-esc="recordData.payment_ref"/>
                            <div class="d-flex">
                                <div t-if="suspenseAccountLine and isUnfolded" class="d-flex fw-bold text-muted align-items-center justify-content-end" t-att-class="{'flex-grow-1' : !recordData.foreign_currency_id}">
                                    <t t-esc="suspenseAccountLineFormattedAmount"/>
                                </div>
                            </div>
                        </div>
                        <div class="o_row d-md-none">
                            <BankRecButtonList t-props="buttonListProps" isTopLine="true" suspenseAccountLine="suspenseAccountLine" t-if="!recordData.is_reconciled and !isUnfolded"/>
                            <span t-if="recordData.is_reconciled" class="text-start text-truncate text-muted" t-esc="reconciledLineName"/>
                        </div>
                        <t t-if="isUnfolded">
                            <t t-foreach="linesToReconcile" t-as="line" t-key="line_index">
                                <BankRecLineToReconcile statementLine="record" line="line"/>
                            </t>
                            <div class="o_row" t-if="!linesToReconcile.length and partner">
                                <div class="o_partner_button d-flex gap-2 align-items-center overflow-hidden">
                                    <a href="#" class="text-truncate" t-esc="partner.display_name" t-on-click.stop="openPartner" t-att-title="partner.display_name"/>
                                    <button class="btn btn-link oi oi-close p-0" t-on-click.stop="removePartner"/>
                                </div>
                            </div>
                            <div class="o_row">
                                <div class="o_button_line">
                                    <BankRecButtonList t-if="!recordData.is_reconciled" suspenseAccountLine="suspenseAccountLine" t-props="buttonListProps"/>
                                </div>
                                <div t-if="suspenseAccountLine" class="d-none d-md-flex fw-bold text-muted align-items-center justify-content-end" t-att-class="hasForeignCurrencyAndSameCurrencyForAllLines ? 'w-50' : 'w-100'">
                                    <t t-esc="suspenseAccountLineFormattedAmount"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </article>
        </xpath>
    </t>
</templates>
