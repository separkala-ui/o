<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">

    <t t-name="pos_restaurant_appointment.KanbanController" t-inherit="web.KanbanView" t-inherit-mode="primary">
        <xpath expr="//SearchBar" position="before">
            <button class="btn text-nowrap me-2 bg-200 px-3 d-flex align-items-center date-filter" t-attf-class="{{ env.isSmall ? 'mt-1' : '' }}">
                <div t-if="state.date" class="d-flex justify-content-between align-items-center">
                    <div t-on-click="(ev) => this.onClickDateBtn(ev)">
                        <span><t t-out="state.date.toFormat('ccc')"/> <t t-out="state.date.toFormat(localization.dateFormat)"/></span>
                    </div>
                    <i class="fa fa-close ps-2 pb-1" t-on-click="(ev) => this.onRemove(ev, 'date')"/>
                </div>
                <t t-else="">
                    <div t-on-click="(ev) => this.onClickDateBtn(ev)">
                        Select Date
                    </div>
                </t>
            </button>
            <Dropdown>
                <button class="btn bg-200 px-3 dropdown-toggle hour-filter">
                    <t t-if="state.period">
                        <span><t t-out="state.period"/></span>
                        <i class="fa fa-close ps-2 pb-1" t-on-click="(ev) => this.onRemove(ev, 'hour')"/>
                    </t>
                    <t t-else="">
                        Select hour
                    </t>
                </button>
                <t t-set-slot="content">
                    <DropdownItem class="'d-flex justify-content-start'" onSelected="() => this.onClickHourFilter('morning')">
                            Morning: 12:00 AM - 11:00 AM
                    </DropdownItem>
                    <DropdownItem class="'d-flex justify-content-start'" onSelected="() => this.onClickHourFilter('lunch')">
                            Lunch: 11:00 AM - 5:00 PM
                    </DropdownItem>
                    <DropdownItem class="'d-flex justify-content-start'" onSelected="() => this.onClickHourFilter('evening')">
                            Evening: 5:00 PM - 12:00 AM
                    </DropdownItem>
                </t>
            </Dropdown>
            <div class="ms-2 me-2 pe-none" t-attf-class="{{ env.isSmall ? 'mt-1' : '' }}">
                <t t-out="totalPersonCount"/>p
            </div>
        </xpath>
    </t>

</templates>
