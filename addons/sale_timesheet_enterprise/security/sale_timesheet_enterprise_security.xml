<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="billable_timesheet_approver" model="ir.rule">
            <field name="name">Billable Timesheet Approver</field>
            <field name="model_id" ref="model_edit_billable_time_target"/>
            <field name="domain_force">['|', ('timesheet_manager_id', 'in', [False, user.id]), ('parent_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('hr_timesheet.group_hr_timesheet_approver'))]"/>
        </record>

        <record id="edit_billable_time_target_rule_multi_company" model="ir.rule">
            <field name="name">Edit Billable Time Target multi-company</field>
            <field name="model_id" ref="model_edit_billable_time_target"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
