<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="intrastat_goods_submission_wizard_form" model="ir.ui.view">
            <field name="name">l10n_dk_intrastat.intrastat.goods.submission.wizard.form</field>
            <field name="model">l10n_dk_intrastat.intrastat.goods.submission.wizard</field>
            <field name="inherit_id" ref="account_reports.return_submission_wizard_form"/>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <field name="instructions" position="replace">
                    <group>
                        <group id="instructions">
                            <ol colspan="2">
                                <li>
                                    <div class="d-inline-block align-top">
                                        <span>Download your intrastat return</span><br/>
                                        <button string="Download XLSX" name="print_xslx" type="object" class="btn-secondary mb-1"/>
                                    </div>
                                </li>
                                <li>Log in to <a href="https://www.dst.dk/en/Indberet/vejledning-til-digital-indberetning/indberetning-via-idep/udenrigshandel-med-tjenester" target="_blank">Statistics Denmark</a></li>
                                <li>Submit the Intrastat Form through IDEP</li>
                            </ol>
                        </group>
                    </group>
                </field>
            </field>
        </record>

    </data>
</odoo>
