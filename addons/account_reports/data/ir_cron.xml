<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_cron_generate_account_return" model="ir.cron">
        <field name="name">Generate or refresh account return for every companies</field>
        <field name="model_id" ref="model_account_return_type"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_or_refresh_all_returns()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="active" eval="True"/>
    </record>
</odoo>
