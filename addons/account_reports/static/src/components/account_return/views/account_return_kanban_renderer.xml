<?xml version="1.0" encoding="utf-8"?>

<templates>
    <t t-name="account_reports.account_return_kanban_renderer">

        <div class="o_kanban_renderer o_account-return-kanban">
            <t t-if="groups">
                <t t-foreach="groups" t-as="group" t-key="group.key">
                    <t t-if="group.count > 0">
                        <span class="return-group-header">
                            <t t-esc="group.displayName"/>
                        </span>
                        <t t-call="account_reports.return_list">
                            <t t-set="list" t-value="group.list"/>
                        </t>
                    </t>
                </t>
            </t>
            <t t-else="" t-call="account_reports.return_list">
                <t t-set="list" t-value="props.list"/>
            </t>
        </div>
    </t>

    <t t-name="account_reports.return_list">
        <t t-foreach="list.records" t-as="record" t-key="record.id">
            <AccountReturnKanbanRecord
                record="record"
                archInfo="props.archInfo"
                Compiler="props.Compiler"
                readonly="false"
                forceGlobalClick="false"
                canResequence="false"
                openRecord.bind="openRecord"
            />
        </t>
    </t>
</templates>
