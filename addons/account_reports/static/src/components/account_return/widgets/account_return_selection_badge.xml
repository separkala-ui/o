<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="account_reports.AccountReturnSelectionBadgeField">
        <t t-if="this.editableOptions.includes(value)">
            <Dropdown>
                <button
                    t-attf-class="d-block py-1 px-2 badge rounded-pill {{this.additionalClassName}}"
                    t-att-class="this.decorationForValue(value)"
                    t-att-style="this.capsuleStyle"
                >
                    <span t-esc="display"/>
                </button>
                <t t-set-slot="content">
                    <DropdownItem
                        class="'account-return-selection-badge-dropdown-item'"
                        t-if="!required || !value"
                        t-esc="this.props.placeholder || ''"
                        onSelected="() => this.onChange(false)"
                    />
                    <t t-foreach="options" t-as="option" t-key="option[0]">
                        <t t-if="this.editableOptions.includes(option[0])">
                            <DropdownItem
                                class="'d-flex text-black align-items-center account-return-selection-badge-dropdown-item'"
                                onSelected="() => this.onChange(option[0])"
                            >
                                <div class="rounded-circle me-2" style="width: 10px; height: 10px;" t-att-class="this.decorationForValue(option[0], true)"/>
                                <span t-esc="option[1]"/>
                            </DropdownItem>
                        </t>
                    </t>
                </t>
            </Dropdown>
        </t>
        <t t-else="">
            <div
                t-attf-class="d-block py-1 px-2 badge rounded-pill {{this.additionalClassName}}"
                t-att-class="this.decorationForValue(value)"
                t-att-style="this.capsuleStyle + ' cursor: default;'"
                t-on-click.stop.prevent="() => {}"
                t-out="display"
            />
        </t>
    </t>

</templates>
