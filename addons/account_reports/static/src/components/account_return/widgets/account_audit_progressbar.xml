<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="account_reports.AccountAuditProgresbar" t-inherit="web.ProgressBarField" t-inherit-mode="primary">
        <t t-else="" position="replace">
            <t t-else="">
                <t t-if="!hasMaxValue">
                  <span class="mx-1">None</span>
                </t>
                <t t-else="">
                    <input
                        t-if="isEditable and props.isCurrentValueEditable"
                        t-ref="currentValue"
                        class="o_input h-100 text-center"
                        type="text"
                        inputmode="decimal"
                        autocomplete="off"
                        t-on-focus="onInputFocus"
                        t-on-blur="onInputBlur"
                    />
                    <span t-else="" class="mx-1" t-esc="formatCurrentValue(true)"/>
                    /
                    <input
                        t-if="isEditable and props.isMaxValueEditable"
                        t-ref="maxValue"
                        class="o_input h-100 text-center"
                        type="text"
                        inputmode="decimal"
                        autocomplete="off"
                        t-on-focus="onInputFocus"
                        t-on-blur="onInputBlur"
                    />
                    <span t-else="" class="mx-1" t-esc="formatMaxValue(true)"/>
                </t>
            </t>
        </t>
    </t>
</templates>
