<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_reports.Chatter" t-inherit="mail.Chatter" t-inherit-mode="primary">
        <xpath expr="//Composer" position="attributes" type="add">
            <attribute name="reportController">props.reportController</attribute>
            <attribute name="date_to">props.date_to</attribute>
            <attribute name="list">props.list</attribute>
        </xpath>
        <xpath expr="//Thread" position="attributes" type="add">
            <attribute name="reportController">props.reportController</attribute>
        </xpath>
    </t>
</templates>
