<odoo>
    <record model="ir.ui.view" id="account_reports_journal_dashboard_kanban_view">
        <field name="name">account.journal.dashboard.kanban.reports</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">

            <xpath expr="//div[@name='kanban_manage_reports']" position="inside">
                <div t-if="journal_type == 'sale'">
                    <a type="action" name="%(action_account_report_ar)d">Aged Receivables</a>
                </div>
                <div t-if="journal_type == 'purchase'">
                    <a type="action" name="%(action_account_report_ap)d">Aged Payables</a>
                </div>
            </xpath>

            <!-- Replace the displayed amount by an action opening the General Ledger report -->
            <xpath expr="//div[@id='dashboard_bank_cash_balance']" position="replace">
                <div id="dashboard_bank_cash_balance" class="col overflow-hidden text-start">
                    <a type="object" name="action_open_bank_balance_in_gl" title="Last Statement balance + Transactions since statement">Balance</a>
                </div>
            </xpath>

            <xpath expr="//div[@id='bank_and_cash_container']//div[@name='action_card_reconciliation']" position="inside">
                <a type="action" name="%(action_account_report_bank_reconciliation)d" groups="account.group_account_user" >Report</a>
            </xpath>

            <t t-call="JournalMiscelaneous" position="before">
                <t t-if="dashboard['is_account_return_journal']" t-call="JournalTaxReturn"/>
            </t>

            <t t-call="JournalMiscelaneous" position="attributes">
                <attribute name="t-if" add="!dashboard['is_account_return_journal']" separator="and"/>
            </t>

            <t t-name="JournalMiscelaneous" position="after">
                <t t-name="JournalTaxReturn">
                    <div id="dashboard_return_left" class="col mb-3 mb-sm-0">
                        <div class="row">
                            <div>
                                <button type="action" name="account_reports.action_server_open_view_account_return" groups="account.group_account_user"
                                        t-att-class="'me-1 btn ' + (dashboard['tax_return_button_primary'] ? 'btn-primary' : 'btn-secondary')">
                                    Tax Returns
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <widget t-if="!record.has_posted_entries.raw_value and dashboard['onboarding']"
                                name="account_onboarding"
                                groups="account.group_account_manager"
                            />
                        </div>
                    </div>
                    <div id="dashboard_return_right" class="col-auto">
                        <widget name="account_return_dashboard_list" groups="account.group_account_user"/>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>
