<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_enterprise.Order" t-inherit="pos_enterprise.Order" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_pdis_order_card_header_top')]" position="inside">
            <div class="o_pdis_seats flex-shrink-0 ps-2 text-end" t-if="this.order.pos_order_id.customer_count">
                <i class="fa fa-users pe-1" aria-hidden="true"></i>
                <span t-esc="this.order.pos_order_id.customer_count" />
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_pdis_alert-timer')]" position="attributes">
            <attribute name="t-attf-class" add="#{(isPending) ? 'd-none' : ''}" separator=" " />
        </xpath>
        <xpath expr="//div[hasclass('o_pdis_alert-timer')]" position="after">
            <div class="rounded-pill py-1 px-3 text-bg-warning" t-if="isPending">Pending</div>
        </xpath>
    </t>
</templates>
