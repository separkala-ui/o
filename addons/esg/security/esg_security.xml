<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record model="res.groups.privilege" id="res_groups_privilege_esg">
            <field name="name">ESG</field>
            <field name="category_id" ref="base.module_category_esg"/>
            <field name="description">Helps you track, manage, and improve your environmental, social, and governance (ESG) impact.</field>
        </record>
        <record id="esg_group_user" model="res.groups">
            <field name="name">User</field>
            <field name="privilege_id" ref="res_groups_privilege_esg"/>
            <field name="implied_ids" eval="[Command.link(ref('account.group_account_invoice'))]"/>
            <field name="comment">Access to ESG features including viewing data, reporting, and mapping emissions with emissions factors, but without configuration rights.</field>
        </record>
        <record id="esg_group_manager" model="res.groups">
            <field name="name">Administrator</field>
            <field name="implied_ids" eval="[Command.link(ref('esg_group_user'))]"/>
            <field name="privilege_id" ref="res_groups_privilege_esg"/>
            <field name="user_ids" eval="[Command.link(ref('base.user_root')), Command.link(ref('base.user_admin'))]"/>
            <field name="comment">Full access to all ESG features including configuration rights.</field>
        </record>

        <record model="ir.rule" id="esg_carbon_emission_report_comp_rule">
            <field name="name">Carbon Emissions: multi-company</field>
            <field name="model_id" ref="model_esg_carbon_emission_report"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>

        <record model="ir.rule" id="esg_emission_factor_comp_rule">
            <field name="name">Emission Factors: multi-company</field>
            <field name="model_id" ref="model_esg_emission_factor"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>

        <record model="ir.rule" id="esg_other_emission_comp_rule">
            <field name="name">Other Emissions: multi-company</field>
            <field name="model_id" ref="model_esg_other_emission"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>
    </data>
</odoo>
