<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="esg_gas_form_view" model="ir.ui.view">
        <field name="name">esg.gas.form</field>
        <field name="model">esg.gas</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g. Fossil Methane (CH₄)" widget="text" class="o_text_overflow" options="{'line_breaks': False}"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="global_warming_potential"/>
                            <field name="category"/>
                            <field name="code" readonly="is_mandatory_gas"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="esg_gas_list_view" model="ir.ui.view">
        <field name="name">esg.gas.list</field>
        <field name="model">esg.gas</field>
        <field name="arch" type="xml">
            <list expand="True">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="global_warming_potential" width="250px"/>
            </list>
        </field>
    </record>

    <record id="esg_gas_kanban_view" model="ir.ui.view">
        <field name="name">esg.gas.kanban</field>
        <field name="model">esg.gas</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="d-flex mb-1">
                            <field name="name" class="fw-bold fs-5 text-truncate"/>
                            <label class="ms-auto" for="global_warming_potential">GWP:</label>
                            <field class="ms-1" name="global_warming_potential"/>
                        </div>
                        <footer class="pt-0">
                            <field name="category"/>
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_esg_gasses_list" model="ir.actions.act_window">
        <field name="name">Gases</field>
        <field name="res_model">esg.gas</field>
        <field name="path">esg-gases</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'group_by': 'category'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create and configure greenhouse gases.
            </p>
            <p>
                Define gases to convert emissions into CO₂ equivalents using Global Warming Potential values.
            </p>
        </field>
    </record>
</odoo>
