<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_ticket_view_form_inherit_helpdesk_sale_coupon" model="ir.ui.view">
        <field name='name'>helpdesk.ticket.form.inherit.sale.coupon</field>
        <field name="model">helpdesk.ticket</field>
        <field name="priority">40</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <field name="stage_id" position="before">
                <field name="use_coupons" invisible="1"/>
                <field name="default_giftcard_program_id" invisible="1"/>
                <button type="action" name="%(helpdesk_sale_giftcard_generate_wizard_action)d" string="Gift Card"
                    invisible="not use_giftcards or not partner_id"
                    context="{'default_ticket_id': id, 'default_company_id': company_id, 'default_program_id': default_giftcard_program_id}"
                    data-hotkey="g" groups="sales_team.group_sale_salesman"/>
                <button type="action" name="%(helpdesk_sale_coupon_generate_action)d" string="Coupon"
                    invisible="not use_coupons"
                    context="{'default_ticket_id': id, 'default_company_id': company_id}" data-hotkey="o"
                    groups="sales_team.group_sale_salesman"/>
            </field>
            <button name="action_open_helpdesk_ticket" position="before">
                <button class="oe_stat_button" name="open_coupons" icon="fa-tags"
                    groups="sales_team.group_sale_salesman"
                    type="object" invisible="gift_card_count == 0 or not use_giftcards" context="{'program_type': 'gift_card'}">
                    <field name="gift_card_count" string="Gift Cards" widget="statinfo" />
                </button>
                <button class="oe_stat_button" name="open_coupons" icon="fa-ticket"
                    groups="sales_team.group_sale_salesman"
                    type="object" invisible="coupons_count == 0" context="{'program_type': 'coupons'}">
                    <field name="coupons_count" string="Coupons" widget="statinfo" />
                </button>
            </button>
        </field>
    </record>

</odoo>
