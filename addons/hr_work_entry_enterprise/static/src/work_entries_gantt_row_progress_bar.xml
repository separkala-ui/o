<?xml version="1.1" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="hr_work_entry_enterprise.WorkEntriesGanttRowProgressBar">
        <span
            class="o_gantt_progress_bar position-relative h-100 pe-none o_gantt_group_none">
            <t t-if="props.progressBar.max_value gt 0">
                <span
                    class="bg-opacity-25 position-absolute top-0 end-0 h-100"
                />
                <span
                    t-if="show"
                    class="position-absolute top-0 end-0 h-100 d-flex align-items-end justify-content-center flex-xl-column gap-1 flex-row px-1"
                >
                    <span
                        class="o_gantt_group_hours o-xsmaller lh-base fw-bold text-muted"
                        t-att-class="status ? `text-${status}` : ''"
                        t-esc="`${props.progressBar.value_formatted}`"
                    />
                    <span
                        class="o_gantt_group_hours o-xsmaller lh-base text-muted"
                        t-esc="'on ' + `${props.progressBar.max_value_formatted}`"
                    />
                </span>
            </t>
            <t t-elif="show">
                <span
                    class="o_gantt_group_hours position-absolute top-0 end-0 h-100 d-flex align-items-center px-1 pe-auto bg-view o-xsmaller fw-bold text-muted"
                    t-esc="props.progressBar.value_formatted"
                />
            </t>
        </span>
    </t>
</templates>
