<?xml version="1.0"?>
<odoo>
    <record id="view_helpdesk_tag_assignment_list" model="ir.ui.view">
        <field name="name">helpdesk.tag.assignment.list</field>
        <field name="model">helpdesk.tag.assignment</field>
        <field name="arch" type="xml">
            <list editable="bottom" create="true" delete="true">
                <field name="team_id" column_invisible="1"/>
                <field name="tag_id" required="1" options="{'no_open': True, 'no_create_edit': True}"/>
                <field name="user_ids" required="1" widget="many2many_tags_avatar" options="{'no_quick_create': True}"/>
            </list>
        </field>
    </record>

    <record id="view_helpdesk_tag_assignment_search" model="ir.ui.view">
        <field name="name">helpdesk.tag.assignment.search</field>
        <field name="model">helpdesk.tag.assignment</field>
        <field name="arch" type="xml">
            <search>
                <field name="tag_id"/>
                <field name="user_ids"/>
                <group>
                    <filter string="Team Member" name="user_id" context="{'group_by': 'user_ids'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_helpdesk_tag_assignment" model="ir.actions.act_window">
        <field name="name">Configure Tags Handled by Team Members</field>
        <field name="res_model">helpdesk.tag.assignment</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_helpdesk_tag_assignment_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tags or team members found. Let's create them!
            </p>
            <p>
                Assign tickets to the appropriate team members by defining who can work on tickets with certain tags.
            </p>
        </field>
        <field name="domain">[('team_id', '=', active_id)]</field>
        <field name="context">{
            'default_team_id': active_id,
        }</field>
    </record>
</odoo>
