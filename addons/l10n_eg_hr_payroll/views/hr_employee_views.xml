<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">hr.employee.view.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_payroll.payroll_hr_employee_view_form"/>
        <field name="arch" type="xml">
            <group name="payroll_group" position="inside">
                <group string="Allowances" invisible="country_code != 'EG'">
                    <label for="l10n_eg_housing_allowance" string="Housing"/>
                    <div class="o_row" name="l10n_eg_housing_allowance" >
                        <field name="l10n_eg_housing_allowance" class="o_hr_narrow_field"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_eg_transportation_allowance" string="Transportation"/>
                    <div class="o_row" name="l10n_eg_transportation_allowance">
                        <field name="l10n_eg_transportation_allowance" class="o_hr_narrow_field"/>
                        <span>/ month</span>
                    </div>
                    <label for="l10n_eg_other_allowances" string="Other"/>
                    <div class="o_row" name="l10n_eg_other_allowances">
                        <field name="l10n_eg_other_allowances" class="o_hr_narrow_field"/>
                        <span>/ month</span>
                    </div>

                    <separator string="Annual Leave Provision"/>
                    <label for="l10n_eg_total_leave_days" string="Number of Leave"/>
                    <div class="o_row" name="l10n_eg_total_leave_days">
                        <field name="l10n_eg_total_leave_days" class="o_hr_narrow_field"/>
                        <span>days</span>
                    </div>

                    <separator string="Social Insurance Reference"/>
                    <field name="l10n_eg_social_insurance_reference"/>
                </group>
            </group>
        </field>
    </record>
</odoo>
