<odoo>
    <record id="accountant_knowledge_form_inherit" model="ir.ui.view">
        <field name="name">accountant.knowledge.form.inherit</field>
        <field name="inherit_id" ref="knowledge.knowledge_article_view_form"/>
        <field name="model">knowledge.article</field>
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="inherited_audit_report_id" invisible="1" groups="account.group_account_user"/> <!-- Needed for all the patches in the front-end. Not used in the templates/views.-->
            </xpath>
        </field>
    </record>
</odoo>
