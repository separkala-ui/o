<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_job_view_form" model="ir.ui.view">
        <field name="name">hr.job.form</field>
        <field name="model">hr.job</field>
        <field name="inherit_id" ref="hr.view_hr_job_form"/>
        <field name="arch" type="xml">
            <group name="contract" position="inside">
                <field name="contract_template_id" groups="hr.group_hr_user"
                    context="{'form_view_ref': 'hr_contract_salary.hr_contract_view_form_contract_templates'}"
                    options="{'no_create': True}"/>
            </group>
        </field>
    </record>
</odoo>
