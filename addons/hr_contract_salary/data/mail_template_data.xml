<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

    <record id="mail_template_send_offer" model="mail.template">
        <field name="name">Employee: Contract And Salary Package</field>
        <field name="model_id" ref="hr_contract_salary.model_hr_contract_salary_offer"/>
        <field name="subject">{{ object.company_id.name }}: Job Offer - {{ object.employee_version_id.name }}</field>
        <field name="partner_to" eval="False"/>
        <field name="email_to" eval="False"/>
        <field name="use_default_to" eval="True"/>
        <field name="description">Sent manually when you generate a simulation link on the employee contract</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <h2>Congratulations!</h2>
                You can configure your salary package by clicking on the link below.<br/>
                <t t-if="ctx.get('validity_end')">
                    The link will expire on <t t-out="ctx.get('validity_end')"/>.
                </t>
                <div style="padding: 16px 0px 16px 0px;">
                    <a t-att-href="'/salary_package/simulation/offer/%s%s' % (
                            ctx.get('offer_id'),
                            ('?token=' + ctx.get('access_token')) if ctx.get('access_token') else ''
                        )"
                    target="_blank"
                    t-attf-style="background-color: {{object.company_id.email_secondary_color or '#875A7B'}}; text-decoration: none; color: {{object.company_id.email_primary_color or '#FFFFFF'}}; padding: 8px 16px 8px 16px; border-radius: 5px;">
                        Configure your package
                    </a>
                </div>
            </div>
        </field>
        <field name="lang">{{ object.employee_version_id.employee_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>

    <record id="mail_template_send_offer_applicant" model="mail.template">
        <field name="name">Recruitment: Your Salary Package</field>
        <field name="model_id" ref="hr_contract_salary.model_hr_contract_salary_offer"/>
        <field name="subject">{{ object.company_id.name }}: Job Offer - {{ object.applicant_id.partner_name }}</field>
        <field name="partner_to" eval="False"/>
        <field name="email_to" eval="False"/>
        <field name="use_default_to" eval="True"/>
        <field name="description">Sent automatically when you generate an offer for an application</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <h2>Congratulations!</h2>
                You can configure your salary package by clicking on the link below.<br/>
                <t t-if="ctx.get('validity_end')">
                    The link will expire on <t t-out="ctx.get('validity_end')"/>.
                </t>
                <div style="padding: 16px 0px 16px 0px;">
                    <a t-attf-href="/salary_package/simulation/offer/{{ctx.get('offer_id')}}?token={{ctx.get('access_token')}}"
                        target="_blank"
                        t-attf-style="background-color: {{object.company_id.email_secondary_color or '#875A7B'}}; text-decoration: none; color: {{object.company_id.email_primary_color or '#FFFFFF'}}; padding: 8px 16px 8px 16px; border-radius: 5px;">Configure your package</a>
                </div>
            </div>
        </field>
        <field name="lang">{{ object.applicant_id.partner_id.lang }}</field>
        <field name="auto_delete" eval="True"/>
    </record>
</data></odoo>
