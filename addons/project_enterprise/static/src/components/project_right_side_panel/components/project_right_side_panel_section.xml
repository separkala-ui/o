<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="project_enterprise.ProjectRightSidePanelSection" t-inherit="project.ProjectRightSidePanelSection" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_rightpanel_title')]//h3" position="before">
            <span t-if="env.isSmall and props.canBeClosed"><i t-attf-class="fa fa-fw {{state.isClosed ? 'fa-caret-right' : 'fa-caret-down'}}"/></span>
        </xpath>
        <xpath expr="//div[hasclass('o_rightpanel_title')]" position="attributes">
            <attribute name="t-att-class" add="{ 'cursor-pointer': env.isSmall and props.canBeClosed }"/>
            <attribute name="t-on-click">toggleSection</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_rightpanel_data')]" position="attributes">
            <attribute name="t-attf-class" separator=" " add="{{state.isClosed ? 'o_rightpanel_hidden d-none' : ''}}"/>
        </xpath>
    </t>

</templates>
