<odoo>
    <data noupdate="1">
        <record id="uae_employee_payroll_structure" model="hr.payroll.structure">
            <field name="name">United Arab Emirates: Monthly Pay</field>
            <field name="country_id" ref="base.ae"/>
            <field name="type_id" ref="l10n_ae_hr_payroll.uae_employee_payroll_structure_type"/>
            <field name="report_id" ref="l10n_ae_hr_payroll.action_report_payslip_ae"/>
            <field name="rule_ids" eval="[]"/>
            <field name="unpaid_work_entry_type_ids" eval="[
                (4, ref('hr_work_entry.work_entry_type_unpaid_leave')),
                (4, ref('hr_work_entry.hr_work_entry_type_out_of_contract')),
                (4, ref('hr_work_entry.uae_sick_leave_0_entry_type')),
            ]"/>
        </record>
        <record id="l10n_ae_hr_payroll.uae_employee_payroll_structure_type" model="hr.payroll.structure.type">
            <field name="default_struct_id" ref="uae_employee_payroll_structure"/>
        </record>

        <record id="l10n_ae_uae_instant_pay" model="hr.payroll.structure">
            <field name="name">United Arab Emirates: Instant Pay</field>
            <field name="code">UAEINSTANTPAY</field>
            <field name="country_id" ref="base.ae"/>
            <field name="type_id" ref="l10n_ae_hr_payroll.uae_employee_payroll_structure_type"/>
            <field name="rule_ids" eval="[]"/>
            <field name="use_worked_day_lines" eval="False"/>
            <field name="hide_basic_on_pdf" eval="True"/>
            <field name="unpaid_work_entry_type_ids" eval="[Command.link(ref('hr_work_entry.work_entry_type_unpaid_leave'))]"/>
        </record>
    </data>
</odoo>
