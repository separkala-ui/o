<odoo>
    <data noupdate="0">
        <record id="l10n_ae_uae_instant_pay_allowance" model="hr.salary.rule">
            <field name="name">Allowance</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">ALLOW</field>
            <field name="sequence">2</field>
            <field name="condition_select">input</field>
            <field name="condition_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_allowance"/>
            <field name="amount_select">input</field>
            <field name="amount_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_allowance"/>
            <field name="struct_id" ref="l10n_ae_hr_payroll.l10n_ae_uae_instant_pay"/>
        </record>

        <record id="l10n_ae_uae_instant_pay_commission" model="hr.salary.rule">
            <field name="name">Commission</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">COMM</field>
            <field name="sequence">2</field>
            <field name="condition_select">input</field>
            <field name="condition_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_commission"/>
            <field name="amount_select">input</field>
            <field name="amount_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_commission"/>
            <field name="struct_id" ref="l10n_ae_hr_payroll.l10n_ae_uae_instant_pay"/>
        </record>

        <record id="l10n_ae_uae_instant_pay_salary_advance" model="hr.salary.rule">
            <field name="name">Salary Advance</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">ADV</field>
            <field name="sequence">3</field>
            <field name="condition_select">input</field>
            <field name="condition_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_salary_advance"/>
            <field name="amount_select">input</field>
            <field name="amount_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_salary_advance"/>
            <field name="struct_id" ref="l10n_ae_hr_payroll.l10n_ae_uae_instant_pay"/>
        </record>

        <record id="l10n_ae_uae_instant_pay_loan_advance" model="hr.salary.rule">
            <field name="name">Loan Advance</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="code">LOAN</field>
            <field name="sequence">3</field>
            <field name="condition_select">input</field>
            <field name="condition_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_loan_advance"/>
            <field name="amount_select">input</field>
            <field name="amount_other_input_id" ref="l10n_ae_hr_payroll.l10n_ae_input_loan_advance"/>
            <field name="struct_id" ref="l10n_ae_hr_payroll.l10n_ae_uae_instant_pay"/>
        </record>

        <record id="l10n_ae_uae_instant_pay_deduction" model="hr.salary.rule">
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="name">Deduction</field>
            <field name="sequence">190</field>
            <field name="code">DED</field>
            <field name="condition_select">python</field>
            <field name="condition_python">result = 'DED' in inputs</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
result = -inputs['DED'].amount
result_name = inputs['DED'].name
            </field>
            <field name="struct_id" ref="l10n_ae_hr_payroll.l10n_ae_uae_instant_pay"/>
        </record>

        <record id="l10n_ae_uae_instant_pay_net_salary" model="hr.salary.rule">
            <field name="category_id" ref="hr_payroll.NET"/>
            <field name="name">Net Salary</field>
            <field name="sequence">200</field>
            <field name="code">NET</field>
            <field name="appears_on_employee_cost_dashboard" eval="True"/>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">
result = categories['ALW'] + categories['DED']
            </field>
            <field name="struct_id" ref="l10n_ae_hr_payroll.l10n_ae_uae_instant_pay"/>
        </record>
    </data>
</odoo>
