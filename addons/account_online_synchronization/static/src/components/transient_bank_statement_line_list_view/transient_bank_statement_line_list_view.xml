<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_online_synchronization.TransientBankStatementLineRenderer" t-inherit="web.ListRenderer" t-inherit-mode="primary">
        <xpath expr="//table" position="before">
            <div class="alert alert-warning text-center mb-0 row"
                 role="alert"
                 t-if="env.searchModel.context.has_manual_entries or env.searchModel.context.is_fetch_before_creation or env.searchModel.context.has_cancelled_entries"
            >
                <span t-if="env.searchModel.context.has_manual_entries">
                    You have <a href="" t-on-click.prevent="() => this.openManualEntries()">entries</a>
                    within this period that were not created using the online synchronization.
                </span>
                <span t-if="env.searchModel.context.is_fetch_before_creation">
                    You are importing transactions before the creation of your online synchronization
                    (<t t-out="env.searchModel.context.account_online_link_create_date"/>).
                </span>
                <span t-if="env.searchModel.context.has_cancelled_entries">
                    There are cancelled <a href="" t-on-click.prevent="openCancelledEntries">entries</a> within this period.
                </span>
            </div>
        </xpath>
    </t>

    <t t-name="TransientBankStatementLineButtonTemplate" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <xpath expr="." position="inside">
            <button type="button" class="btn btn-primary" data-hotkey="i" t-on-click.stop="onClickImportTransactions" t-if="allowImportTransaction">
                Import Transactions
            </button>
        </xpath>
    </t>
</templates>
