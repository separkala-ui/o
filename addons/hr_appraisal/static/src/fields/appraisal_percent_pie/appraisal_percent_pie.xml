<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="hr_appraisal.AppraisalPercentPieField" t-inherit="web.PercentPieField">
        <span class="o_pie_value" position="replace">
            <span class="o_pie_value">
                <t t-out="this.quotient"/>
                /
                <t t-out="this.dividend"/>
            </span>
        </span>
        <span class="o_pie_text" position="replace">
            <span class="o_pie_text" t-out="this.title"/>
        </span>
    </t>

</templates>
