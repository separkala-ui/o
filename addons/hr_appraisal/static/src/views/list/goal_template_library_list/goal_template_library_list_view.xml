<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <t t-name="hr_appraisal.AppraisalGoal.buttons" t-inherit="web.ListView.Buttons" t-inherit-mode="primary">
        <xpath expr="." position="inside">
            <t t-if="hasSelectedRecords">
                <button type="button" class="btn btn-primary" t-on-click="onSelect">
                    <span t-if="defaultEmployeeId">
                        Select
                    </span>
                    <span t-else="">
                        Continue
                    </span>
                </button>
            </t>
            <button type="button" class="btn btn-secondary" t-on-click.stop="onClose">Close</button>
        </xpath>
    </t>
</odoo>
