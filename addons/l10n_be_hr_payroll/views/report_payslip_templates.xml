<?xml version="1.0"?>
<odoo>

<template id="report_termination_holiday_n1" inherit_id="hr_payroll.report_payslip" primary="True">
    <xpath expr="//h2[@id='payslip_name']/span" position="replace">
        <span>
            Holiday Certificate : Exercise <t t-out="(o.date_to-relativedelta(years=1)).strftime('%Y')"/> - Holiday year <t t-out="o.date_to.strftime('%Y')"/>
        </span>
    </xpath>
    <div id="worked_days_table" position="replace"/>
</template>

<template id="report_termination_holiday_n1_lang">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-set="o" t-value="o.with_context(lang=o.employee_id.lang or o.env.lang)"/>
            <t t-call="l10n_be_hr_payroll.report_termination_holiday_n1" t-lang="o.env.lang"/>
        </t>
    </t>
</template>

<template id="report_termination_holiday_n" inherit_id="hr_payroll.report_payslip" primary="True">
    <xpath expr="//h2[@id='payslip_name']/span" position="replace">
        <span>
