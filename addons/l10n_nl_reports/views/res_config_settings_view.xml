<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form_l10n_nl">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="l10n_nl.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="dutch_localization_section" position="attributes">
                <attribute name="invisible">0</attribute>
            </div>

            <xpath expr="//block[@id='dutch_localization']" position="inside">
                <setting company_dependent="1" string="SBR Services">
                    <div class="row mt16">
                        <label for="l10n_nl_reports_sbr_cert_id" class="col-lg-3 o_light_label"/>
                        <field name="l10n_nl_reports_sbr_cert_id" options="{'no_create': True}" domain="[('company_id', '=', company_id), ('is_valid', '=', True)]"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.l10n.nl.reports</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account_reports.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='default_accounts']//setting[1]" position="after">
                <setting invisible="country_code != 'NL'" string="Post difference from rounding tax closing entries in:">
                    <div class="content-group">
                        <div class="row mt8">
                            <label for="l10n_nl_rounding_difference_profit_account_id" class="col-lg-4 o_light_label"/>
                            <field name="l10n_nl_rounding_difference_profit_account_id"/>
                        </div>
                        <div class="row mt8">
                            <label for="l10n_nl_rounding_difference_loss_account_id" class="col-lg-4 o_light_label"/>
                            <field name="l10n_nl_rounding_difference_loss_account_id"/>
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
