<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_journal_dashboard_kanban_view_inherit_gstr" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="inside">
                <field name="country_code" invisible="1"/>
            </xpath>
            <xpath expr="//t[@id='account.JournalBodySalePurchase']//div[@name='kanban_primary_left']" position="inside">
                <div class="row" groups="account.group_account_manager" invisible="not l10n_in_fetch_vendor_edi_feature_enabled">
                    <div class="col overflow-hidden text-start">
                        <t t-if="journal_type == 'purchase' and record.country_code.value == 'IN'">
                            <a type="object" name="l10n_in_action_fetch_irn_data_for_account_journal" groups="account.group_account_invoice">
                                Fetch from GSTN
                            </a>
                        </t>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="view_account_journal_form_inherit_l10n_in_enet_batch_payment" model="ir.ui.view">
        <field name="name">view.account.journal.form.inherit.l10n.in.enet.batch.payment</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@id='outbound_payment_settings']//group[@name='outgoing_payment']" position="inside">
                <group string="Choose Bank Template (E.Net)" invisible="not l10n_in_enet_vendor_batch_payment_feature_enabled or not has_enet_payment_method">
                    <field name="bank_template_id" widget="many2one_avatar_no_open"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
